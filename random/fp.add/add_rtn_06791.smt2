(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01000011 #b11010110001010110110011)))
;; x should be Float32(0x21EB15B3 [Rational(15406515, 9671406556917033397649408), 0.000000])

