(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b10101000110011110101110)))
;; x should be Float32(0x005467AE [Rational(2765783, 356811923176489970264571492362373784095686656), 0.000000])

