(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00100001 #b11111010111001001001111)))
;; x should be Float32(0x90FD724F [Rational(-16609871, 166153499473114484112975882535043072), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000101110111110101100)))
;; y should be Float32(0x0002EFAC [Rational(48107, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.add RTZ x y)))
