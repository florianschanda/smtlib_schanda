(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b11000010110010000000111)))
;; x should be Float32(0x4AE16407 [Rational(14771207, 2), 7385603.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10111111 #b00100101011101111001001)))
;; y should be Float32(0x5F92BBC9 [Rational(21146531104039108608), 21146531104039108608.000000])

(declare-const result Float32)
(assert (= result (fp.add RNE x y)))
(assert (= result ((_ to_fp 8 24) #x5F92BBC9)))
(check-sat)
(exit)
