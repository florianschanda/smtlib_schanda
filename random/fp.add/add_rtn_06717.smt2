(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01110101 #b10010110110101011100011)))
;; y should be Float32(0x3ACB6AE3 [Rational(13331171, 8589934592), 0.001552])

(declare-const result Float32)
(assert (= result (fp.add RTN x y)))
(assert (= result (fp #b0 #b01110101 #b10010110110101011100011)))
(check-sat)
(exit)
