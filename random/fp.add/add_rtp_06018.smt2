(assert (= y (fp #b0 #b10010101 #b01001111101010000100011)))
;; y should be Float32(0x4AA7D423 [Rational(10998819, 2), 5499409.500000])

(declare-const result Float32)
(assert (= result (fp.add RTP x y)))
(assert (not (= result ((_ to_fp 8 24) #x4AA7D424))))
(check-sat)
(exit)
