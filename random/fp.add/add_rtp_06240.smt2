(assert (= x (fp #b1 #b10010101 #b01110100000111101100111)))
;; x should be Float32(0xCABA0F67 [Rational(-12193639, 2), -6096819.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b11110101111100011100001)))
