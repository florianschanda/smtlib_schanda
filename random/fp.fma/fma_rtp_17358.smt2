(assert (= z (fp #b1 #b10010101 #b00101100011110011000101)))
;; z should be Float32(0xCA963CC5 [Rational(-9845957, 2), -4922978.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b10101011 #b11000000001111101001010)))
(check-sat)
(exit)
