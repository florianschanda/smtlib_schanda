(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10110111 #b11110110111110000110111)))
;; x should be Float32(0x5BFB7C37 [Rational(141573589638840320), 141573589638840320.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b11111111 #b00000000000000000000000)))
;; y should be Float32(-oo)

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x6A4E7FFE)))
;; z should be Float32(0x6A4E7FFE [Rational(62410786214233194289430528), 62410786214233194289430528.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
