(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01101010 #b01000110000010110101010)))
;; y should be Float32(0x352305AA [Rational(5341909, 8796093022208), 0.000001])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA2DD606)))
;; z should be Float32(0xCA2DD606 [Rational(-5696259, 2), -2848129.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xCA2DD607)))
(check-sat)
(exit)
