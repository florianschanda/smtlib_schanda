(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b00010111001011010110001)))
;; x should be Float32(0xCA8B96B1 [Rational(-9148081, 2), -4574040.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01111010 #b01100000010000111001111)))
;; y should be Float32(0x3D3021CF [Rational(11542991, 268435456), 0.043001])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10010000 #b10000000001010000010010)))
(check-sat)
(exit)
