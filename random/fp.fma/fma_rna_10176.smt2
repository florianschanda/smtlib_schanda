(assert (= z (fp #b1 #b10010011 #b11101000100110001000100)))
;; z should be Float32(0xC9F44C44 [Rational(-4002577, 2), -2001288.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b10010011 #b11101000100110001000100)))
(check-sat)
(exit)
