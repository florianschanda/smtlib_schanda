(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00101111 #b10001110101101000101001)))
;; x should be Float32(0x17C75A29 [Rational(13064745, 10141204801825835211973625643008), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xFF7FFFFF)))
