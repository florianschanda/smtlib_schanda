(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC92E0BF8)))
;; z should be Float32(0xC92E0BF8 [Rational(-1425791, 2), -712895.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b10101111 #b10001110101101000101000)))
(check-sat)
(exit)
