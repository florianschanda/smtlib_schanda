(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010000 #b11111101100010101100000)))
;; x should be Float32(0x487EC560 [Rational(521771, 2), 260885.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCADA6307)))
;; y should be Float32(0xCADA6307 [Rational(-14312199, 2), -7156099.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xEBDC87C7)))
;; z should be Float32(0xEBDC87C7 [Rational(-533209741384952977479958528), -533209741384952977479958528.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b1 #b11010111 #b10111001000011111000111)))
(check-sat)
(exit)
