(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00110001000101100011100)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xF47A3D49)))
;; y should be Float32(0xF47A3D49 [Rational(-79304029863000073262031811117056), -79304029863000073262031811117056.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b01111100011111001011111)))
;; z should be Float32(0x4ABE3E5F [Rational(12467807, 2), 6233903.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
