(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A079986)))
;; y should be Float32(0x4A079986 [Rational(4443331, 2), 2221665.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01111011 #b11100100101011000100011)))
;; z should be Float32(0x3DF25623 [Rational(15881763, 134217728), 0.118328])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
