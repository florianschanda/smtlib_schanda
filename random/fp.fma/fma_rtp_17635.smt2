(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10100110000111100101111)))
;; x should be Float32(0xCAD30F2F [Rational(-13831983, 2), -6915991.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xDE4CF4E6)))
;; y should be Float32(0xDE4CF4E6 [Rational(-3692170491432271872), -3692170491432271872.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
