(assert (= z (fp #b1 #b11011101 #b11011000001111010010111)))
;; z should be Float32(0xEEEC1E97 [Rational(-36537721584882394205358391296), -36537721584882394205358391296.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (_ NaN 8 24)))
(check-sat)
(exit)
