(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b11111010011000000011000)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010100 #b00001001101111011101010)))
;; y should be Float32(0xCA04DEEA [Rational(-4353909, 2), -2176954.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x6C556727)))
;; z should be Float32(0x6C556727 [Rational(1031953290994681849367756800), 1031953290994681849367756800.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
