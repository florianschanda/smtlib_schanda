(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7F840CEE)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA683BDE)))
;; y should be Float32(0xCA683BDE [Rational(-7609839, 2), -3804919.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b01101010010000101111111)))
;; z should be Float32(0x4AB5217F [Rational(11870591, 2), 5935295.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
