(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x6249935B)))
;; y should be Float32(0x6249935B [Rational(929603409840518987776), 929603409840518987776.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x96DF4D6B)))
;; z should be Float32(0x96DF4D6B [Rational(-14634347, 40564819207303340847894502572032), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (_ -oo 8 24)))
(check-sat)
(exit)
