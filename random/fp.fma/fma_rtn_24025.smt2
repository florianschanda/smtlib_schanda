(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010010 #b00100100101111110101000)))
;; y should be Float32(0xC9125FA8 [Rational(-1199093, 2), -599546.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b11000011001100101010110)))
;; z should be Float32(0x00619956 [Rational(3198123, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x00619956)))
(check-sat)
(exit)
