(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7CD21A3B)))
;; x should be Float32(0x7CD21A3B [Rational(8727314859228776696146759014101811200), 8727314859228776696146759014101811200.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x802FB0E3)))
;; y should be Float32(0x802FB0E3 [Rational(-3125475, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z (_ -oo 8 24)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
