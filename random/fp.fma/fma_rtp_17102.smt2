(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x72C08A53)))
;; y should be Float32(0x72C08A53 [Rational(7627308237468563225832979431424), 7627308237468563225832979431424.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010100 #b11101010111001111000010)))
;; z should be Float32(0x4A7573C2 [Rational(8042977, 2), 4021488.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b10010100 #b11101010111001111000010))))
(check-sat)
(exit)
