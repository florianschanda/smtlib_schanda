(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010011 #b00100101100010011000100)))
;; x should be Float32(0xC992C4C4 [Rational(-2404657, 2), -1202328.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01101110 #b01010010110010000001010)))
;; y should be Float32(0xB729640A [Rational(-5550597, 549755813888), -0.000010])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCAFFAACF)))
;; z should be Float32(0xCAFFAACF [Rational(-16755407, 2), -8377703.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCAFFAAB7))))
(check-sat)
(exit)
