(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAD9628B)))
;; y should be Float32(0xCAD9628B [Rational(-14246539, 2), -7123269.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AD737CF)))
;; z should be Float32(0x4AD737CF [Rational(14104527, 2), 7052263.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b10010101 #b10101110011011111001111))))
(check-sat)
(exit)
