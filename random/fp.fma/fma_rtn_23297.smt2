(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01101001 #b10101110100000110000010)))
;; x should be Float32(0x34D74182 [Rational(7053505, 17592186044416), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAA3E263)))
;; y should be Float32(0xCAA3E263 [Rational(-10740323, 2), -5370161.500000])

(declare-const z Float32)
(assert (= z (_ +oo 8 24)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
