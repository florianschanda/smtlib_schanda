(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x2E12DCA2)))
;; y should be Float32(0x2E12DCA2 [Rational(4812369, 144115188075855872), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b00101111010100111100011)))
;; z should be Float32(0x4A97A9E3 [Rational(9939427, 2), 4969713.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b10010101 #b00101111010100111100011)))
(check-sat)
(exit)
