(assert (= y (fp #b0 #b00000000 #b10110000110010010111011)))
;; y should be Float32(0x005864BB [Rational(5792955, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10001000 #b10010111011011010101000)))
;; z should be Float32(0xC44BB6A8 [Rational(-1668821, 2048), -814.854004])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (_ +oo 8 24)))
(check-sat)
(exit)
