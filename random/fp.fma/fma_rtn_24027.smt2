(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10111110011110001000101)))
;; y should be Float32(0xCADF3C45 [Rational(-14629957, 2), -7314978.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010011 #b11111111100000000111100)))
;; z should be Float32(0xC9FFC03C [Rational(-4190223, 2), -2095111.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xC9FFC03C)))
(check-sat)
(exit)
