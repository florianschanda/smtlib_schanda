(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b11101100101101010000000)))
;; z should be Float32(0x80765A80 [Rational(-60597, 5575186299632655785383929568162090376495104), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
