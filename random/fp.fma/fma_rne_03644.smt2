(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010011 #b01011101001110101100100)))
;; x should be Float32(0xC9AE9D64 [Rational(-2860889, 2), -1430444.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b00101001001111111011001)))
;; y should be Float32(0x4A949FD9 [Rational(9740249, 2), 4870124.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80800000)))
;; z should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b10101001 #b10010101100000000001011))))
(check-sat)
(exit)
