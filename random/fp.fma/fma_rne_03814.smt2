(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010001 #b01001000101000011010000)))
;; x should be Float32(0xC8A450D0 [Rational(-673037, 2), -336518.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010010 #b00111011001001111011000)))
;; y should be Float32(0xC91D93D8 [Rational(-1290875, 2), -645437.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b11111111111111111111111)))
;; z should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x524A48E9)))
(check-sat)
(exit)
