(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4AD67FA9)))
;; x should be Float32(0x4AD67FA9 [Rational(14057385, 2), 7028692.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01110100 #b11101100111111111100010)))
;; y should be Float32(0xBA767FE2 [Rational(-8077297, 8589934592), -0.000940])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000001 #b00000000000000000000000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #xC5CE89D3)))
(check-sat)
(exit)
