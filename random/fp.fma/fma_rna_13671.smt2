(assert (= x (fp #b0 #b11111111 #b11001111011110011101001)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b11101001 #b10010100011111010110101)))
;; y should be Float32(0xF4CA3EB5 [Rational(-128187965712509358688299489689600), -128187965712509358688299489689600.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000000)))
;; z should be Float32(-zero)

