(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11110110 #b11010011000000111110101)))
;; x should be Float32(0xFB6981F5 [Rational(-1212441009777301897695005258392010752), -1212441009777301897695005258392010752.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b11111111 #b11110001111001001010111)))
;; y should be Float32(NaN)

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x000FE567)))
;; z should be Float32(0x000FE567 [Rational(1041767, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFFFFFFFF))))
(check-sat)
(exit)
