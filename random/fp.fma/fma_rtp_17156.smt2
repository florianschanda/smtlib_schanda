(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00111110111000001101110)))
;; z should be Float32(0x801F706E [Rational(-1030199, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00000000 #b00111110111000001101110)))
(check-sat)
(exit)
