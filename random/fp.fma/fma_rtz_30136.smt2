(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x38F8F847)))
;; x should be Float32(0x38F8F847 [Rational(16316487, 137438953472), 0.000119])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b00000000000000000000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b10010100 #b00011011111011011001110)))
;; z should be Float32(0x4A0DF6CE [Rational(4651879, 2), 2325939.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b0 #b10010100 #b00011011111011011001110)))
(check-sat)
(exit)
