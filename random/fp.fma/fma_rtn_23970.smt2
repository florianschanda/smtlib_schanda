(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b00011101 #b10111100001101100100011)))
;; y should be Float32(0x0EDE1B23 [Rational(14555939, 2658455991569831745807614120560689152), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC811FA60)))
;; z should be Float32(0xC811FA60 [Rational(-298963, 2), -149481.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xC811FA60)))
(check-sat)
(exit)
