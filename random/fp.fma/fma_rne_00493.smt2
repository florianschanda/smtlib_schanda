(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010001 #b10110111100001010010000)))
;; x should be Float32(0x48DBC290 [Rational(900137, 2), 450068.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000001)))
;; y should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b01000011100110100110011)))
;; z should be Float32(0x8021CD33 [Rational(-2215219, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b00000000 #b00110101110111100011110))))
(check-sat)
(exit)
