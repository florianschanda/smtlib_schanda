(set-info :status unsat)
(declare-const x Float32)
(assert (= x (_ -oo 8 24)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010100 #b10000100001000001101010)))
;; y should be Float32(0xCA42106A [Rational(-6359093, 2), -3179546.500000])

