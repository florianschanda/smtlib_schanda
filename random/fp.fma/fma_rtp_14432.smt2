(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4AB73AFB)))
;; x should be Float32(0x4AB73AFB [Rational(12008187, 2), 6004093.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b11111111 #b10010110011111010001100)))
;; y should be Float32(NaN)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010011 #b00010110101011100010100)))
;; z should be Float32(0xC98B5714 [Rational(-2282949, 2), -1141474.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
