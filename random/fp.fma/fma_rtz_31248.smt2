(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b00110001000101011011110)))
;; x should be Float32(0xCA188ADE [Rational(-4998511, 2), -2499255.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC93C81C8)))
;; y should be Float32(0xC93C81C8 [Rational(-1544249, 2), -772124.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b11111111 #b00000000000000000000000)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
