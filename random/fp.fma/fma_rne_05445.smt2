(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000001)))
;; x should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A02B61A)))
;; y should be Float32(0x4A02B61A [Rational(4283149, 2), 2141574.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b01010100011001110110010)))
;; z should be Float32(0xCA2A33B2 [Rational(-5577177, 2), -2788588.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b10010100 #b01010100011001110110010))))
(check-sat)
(exit)
