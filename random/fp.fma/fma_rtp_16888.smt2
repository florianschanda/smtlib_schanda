(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b10011110110000111110010)))
;; x should be Float32(0x004F61F2 [Rational(2601209, 356811923176489970264571492362373784095686656), 0.000000])

