(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01010101 #b11001111010011111101000)))
;; x should be Float32(0xAAE7A7E8 [Rational(-1897725, 4611686018427387904), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x49DD2244)))
;; y should be Float32(0x49DD2244 [Rational(3623057, 2), 1811528.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b01011010010100000110101)))
;; z should be Float32(0x4AAD2835 [Rational(11348021, 2), 5674010.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x4AAD2835)))
(check-sat)
(exit)
