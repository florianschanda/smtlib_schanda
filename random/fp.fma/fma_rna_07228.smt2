(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A96CB5F)))
;; x should be Float32(0x4A96CB5F [Rational(9882463, 2), 4941231.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b00001010 #b01000101010010101101010)))
;; z should be Float32(0x0522A56A [Rational(5329589, 696898287454081973172991196020261297061888), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b00001010 #b01000101010010101101010)))
(check-sat)
(exit)
