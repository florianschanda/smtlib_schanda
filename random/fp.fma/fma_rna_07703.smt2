(assert (= z ((_ to_fp 8 24) #x2AE999E3)))
;; z should be Float32(0x2AE999E3 [Rational(15309283, 36893488147419103232), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (_ +oo 8 24)))
(check-sat)
(exit)
