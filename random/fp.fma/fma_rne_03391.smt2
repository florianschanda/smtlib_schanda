(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x13098F1C)))
;; y should be Float32(0x13098F1C [Rational(2253767, 1298074214633706907132624082305024), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0039228D)))
;; z should be Float32(0x0039228D [Rational(3744397, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b0 #b00000000 #b01110010010001010001101))))
(check-sat)
(exit)
