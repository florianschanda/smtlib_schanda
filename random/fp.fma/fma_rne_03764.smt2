(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xCA5D12B6)))
;; x should be Float32(0xCA5D12B6 [Rational(-7244123, 2), -3622061.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b01011010010011001011000)))
;; y should be Float32(0x002D2658 [Rational(369867, 89202980794122492566142873090593446023921664), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AC5F9B7)))
;; z should be Float32(0x4AC5F9B7 [Rational(12974519, 2), 6487259.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10010101 #b10001011111100110110111)))
(check-sat)
(exit)
