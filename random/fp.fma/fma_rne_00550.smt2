(assert (= z (fp #b1 #b00000000 #b10101101111001010011110)))
;; z should be Float32(0x8056F29E [Rational(-2849103, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
