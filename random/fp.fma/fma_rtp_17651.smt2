(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010000 #b11110000101010100100000)))
;; x should be Float32(0xC8785520 [Rational(-508585, 2), -254292.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b11101111 #b01111101000101011111001)))
;; y should be Float32(0xF7BE8AF9 [Rational(-7729336745776462748119998559944704), -7729336745776462748119998559944704.000000])

(declare-const z Float32)
(assert (= z (_ NaN 8 24)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
