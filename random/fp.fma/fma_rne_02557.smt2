(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x57112414)))
;; x should be Float32(0x57112414 [Rational(159584140394496), 159584140394496.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010010 #b11010110000101011011000)))
;; y should be Float32(0x496B0AD8 [Rational(1925467, 2), 962733.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA4BCF22)))
;; z should be Float32(0xCA4BCF22 [Rational(-6678417, 2), -3339208.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b11000010 #b00001010100001001000100)))
(check-sat)
(exit)
