(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (_ -oo 8 24)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x497D0A48)))
;; y should be Float32(0x497D0A48 [Rational(2072905, 2), 1036452.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AD31CE1)))
;; z should be Float32(0x4AD31CE1 [Rational(13835489, 2), 6917744.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
