(assert (= y ((_ to_fp 8 24) #x4AD0C51D)))
;; y should be Float32(0x4AD0C51D [Rational(13681949, 2), 6840974.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b01100111111011010001111)))
;; z should be Float32(0x4AB3F68F [Rational(11794063, 2), 5897031.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b10010101 #b01100111111011001101110))))
(check-sat)
(exit)
