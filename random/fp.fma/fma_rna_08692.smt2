(assert (= y ((_ to_fp 8 24) #x4AB539FB)))
;; y should be Float32(0x4AB539FB [Rational(11876859, 2), 5938429.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x006B6470)))
;; z should be Float32(0x006B6470 [Rational(439879, 44601490397061246283071436545296723011960832), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b00010111 #b01101010011100111111101)))
(check-sat)
(exit)
