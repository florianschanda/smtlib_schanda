(assert (= z ((_ to_fp 8 24) #xCA5A0BBE)))
;; z should be Float32(0xCA5A0BBE [Rational(-7144927, 2), -3572463.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (fp #b1 #b10010100 #b10110100000101110111110))))
(check-sat)
(exit)
