(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x805216AA)))
;; z should be Float32(0x805216AA [Rational(-2689877, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
