(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01000010 #b00001111010101100010100)))
;; x should be Float32(0xA107AB14 [Rational(-2222789, 4835703278458516698824704), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xAB849260)))
;; y should be Float32(0xAB849260 [Rational(-271507, 288230376151711744), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b0 #b00011010 #b00011001000001110010010))))
(check-sat)
(exit)
