(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AC8FB75)))
;; y should be Float32(0x4AC8FB75 [Rational(13171573, 2), 6585786.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01001000 #b11011000001110000100010)))
;; z should be Float32(0x246C1C22 [Rational(7736849, 151115727451828646838272), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #x246C1C22))))
(check-sat)
(exit)
