(assert (= y (fp #b1 #b00000000 #b00000000000000000000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b00001010 #b01111110100101010111000)))
;; z should be Float32(0x053F4AB8 [Rational(1567063, 174224571863520493293247799005065324265472), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
