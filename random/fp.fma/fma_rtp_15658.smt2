(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AC68BBB)))
;; z should be Float32(0x4AC68BBB [Rational(13011899, 2), 6505949.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10010101 #b10001101000101110111100)))
(check-sat)
(exit)
