(assert (= y (fp #b0 #b10010101 #b10010001100101000000111)))
;; y should be Float32(0x4AC8CA07 [Rational(13158919, 2), 6579459.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000001)))
;; z should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b00000000 #b11001000110010100000100))))
(check-sat)
(exit)
