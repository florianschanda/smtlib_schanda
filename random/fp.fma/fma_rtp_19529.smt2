(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10000111 #b00010110011011011010000)))
;; x should be Float32(0xC38B36D0 [Rational(-570221, 2048), -278.428223])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b10000100000111110001101)))
;; y should be Float32(0x4AC20F8D [Rational(12717965, 2), 6358982.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000001)))
;; z should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCED30FFD))))
(check-sat)
(exit)
