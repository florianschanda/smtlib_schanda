(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b11110011101001011010110)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10001110111110101110001)))
;; y should be Float32(0xCAC77D71 [Rational(-13073777, 2), -6536888.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC4955EAC)))
;; z should be Float32(0xC4955EAC [Rational(-2447275, 2048), -1194.958496])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFFFFFFFF))))
(check-sat)
(exit)
