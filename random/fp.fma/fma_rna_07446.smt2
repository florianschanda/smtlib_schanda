(assert (= z (fp #b1 #b11100010 #b11011111001110000101001)))
;; z should be Float32(0xF16F9C29 [Rational(-1186491254274994419710889558016), -1186491254274994419710889558016.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
