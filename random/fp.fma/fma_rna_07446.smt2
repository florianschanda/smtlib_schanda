(assert (= x ((_ to_fp 8 24) #x4A307B2A)))
;; x should be Float32(0x4A307B2A [Rational(5782933, 2), 2891466.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b11111111 #b00000000000000000000000)))
;; y should be Float32(-oo)

