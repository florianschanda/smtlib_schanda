(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7FEA44A1)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b00100111000001110111101)))
;; y should be Float32(0xCA9383BD [Rational(-9667517, 2), -4833758.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10001011 #b00010011101011011010100)))
;; z should be Float32(0x4589D6D4 [Rational(2258357, 512), 4410.853516])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
