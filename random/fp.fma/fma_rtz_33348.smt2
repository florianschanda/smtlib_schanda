(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01101110 #b11110000111100001001000)))
;; x should be Float32(0xB7787848 [Rational(-2035465, 137438953472), -0.000015])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4E986F92)))
;; y should be Float32(0x4E986F92 [Rational(1278724352), 1278724352.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (_ +oo 8 24))))
(check-sat)
(exit)
