(assert (= z (fp #b1 #b10010101 #b01101011100001010111001)))
;; z should be Float32(0xCAB5C2B9 [Rational(-11911865, 2), -5955932.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
