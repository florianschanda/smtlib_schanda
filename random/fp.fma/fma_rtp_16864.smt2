(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b10010011010111000000100)))
;; x should be Float32(0x0049AE04 [Rational(1207169, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x807FFFFF)))
;; y should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b01111111111111100111011)))
;; z should be Float32(0xCABFFF3B [Rational(-12582715, 2), -6291357.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xCABFFF3B)))
(check-sat)
(exit)
