(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10001010 #b11101101111011101100101)))
;; x should be Float32(0x4576F765 [Rational(16185189, 4096), 3951.462158])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x809EE2D3)))
;; y should be Float32(0x809EE2D3 [Rational(-10412755, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00001101 #b00110010100011110000010)))
(check-sat)
(exit)
