(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b11011100111101001011110)))
;; x should be Float32(0x4A6E7A5E [Rational(7814447, 2), 3907223.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AFB4E77)))
;; y should be Float32(0x4AFB4E77 [Rational(16469623, 2), 8234811.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b01111100111110101110001)))
;; z should be Float32(0x003E7D71 [Rational(4095345, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10101011 #b11010100001101100010010)))
(check-sat)
(exit)
