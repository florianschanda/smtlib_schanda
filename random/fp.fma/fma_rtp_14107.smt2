(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b10101010000111001110110)))
;; x should be Float32(0x4A550E76 [Rational(6981435, 2), 3490717.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A78AC56)))
;; y should be Float32(0x4A78AC56 [Rational(8148523, 2), 4074261.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x001D066B)))
;; z should be Float32(0x001D066B [Rational(1902187, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x554EF570)))
(check-sat)
(exit)
