(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4AB78E83)))
;; x should be Float32(0x4AB78E83 [Rational(12029571, 2), 6014785.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000000000000000000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b11011101 #b10110100101000001010010)))
;; z should be Float32(0x6EDA5052 [Rational(33782416720336995313443143680), 33782416720336995313443143680.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b11011101 #b10110100101000001010010)))
(check-sat)
(exit)
