(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b00001000111011110110011)))
;; x should be Float32(0x4A8477B3 [Rational(8681395, 2), 4340697.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b01111110010100001101011)))
;; y should be Float32(0x003F286B [Rational(4139115, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00800000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #x0B02B980)))
(check-sat)
(exit)
