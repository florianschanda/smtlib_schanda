(assert (= z ((_ to_fp 8 24) #xCAC3604D)))
;; z should be Float32(0xCAC3604D [Rational(-12804173, 2), -6402086.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #xCAC3604D)))
(check-sat)
(exit)
