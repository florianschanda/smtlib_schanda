(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11010110 #b11011100110000111110111)))
;; x should be Float32(0xEB6E61F7 [Rational(-288186970962906305425047552), -288186970962906305425047552.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000000000000000000000)))
;; y should be Float32(+zero)

