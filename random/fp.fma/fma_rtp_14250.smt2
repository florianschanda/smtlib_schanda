(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010010 #b00111100000010010101000)))
;; x should be Float32(0x491E04A8 [Rational(1294485, 2), 647242.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x0027FDC0)))
;; y should be Float32(0x0027FDC0 [Rational(40951, 11150372599265311570767859136324180752990208), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7FAA1E54)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFFFFFFFF))))
(check-sat)
(exit)
