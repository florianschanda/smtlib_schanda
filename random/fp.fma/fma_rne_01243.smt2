(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7F7FFFFF)))
;; x should be Float32(0x7F7FFFFF [Rational(340282346638528859811704183484516925440), 340282346638528859811704183484516925440.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b11010001100000001011000)))
;; y should be Float32(0x0068C058 [Rational(858123, 89202980794122492566142873090593446023921664), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01000010 #b11010111110010101011110)))
;; z should be Float32(0x216BE55E [Rational(7729839, 9671406556917033397649408), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x405180AF)))
(check-sat)
(exit)
