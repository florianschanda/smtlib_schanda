(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00011100 #b00100001111001111111000)))
;; x should be Float32(0x0E10F3F8 [Rational(1187455, 664613997892457936451903530140172288), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b10101000111100100001111)))
;; z should be Float32(0xCAD4790F [Rational(-13924623, 2), -6962311.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b10010101 #b10101000111100100001111)))
(check-sat)
(exit)
