(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b00000000000000000000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A434722)))
;; y should be Float32(0x4A434722 [Rational(6398865, 2), 3199432.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b01110101001101000110110)))
;; z should be Float32(0xCA3A9A36 [Rational(-6114587, 2), -3057293.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10010100 #b01110101001101000110110)))
(check-sat)
(exit)
