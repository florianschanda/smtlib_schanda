(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10111111 #b11100001101001111101001)))
;; x should be Float32(0x5FF0D3E9 [Rational(34706939950795849728), 34706939950795849728.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x1BBDF223)))
;; y should be Float32(0x1BBDF223 [Rational(12448291, 39614081257132168796771975168), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A2B40B6)))
;; z should be Float32(0x4A2B40B6 [Rational(5611611, 2), 2805805.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10010100 #b01010110100000010110110)))
(check-sat)
(exit)
