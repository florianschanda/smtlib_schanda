(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00100001 #b01000101110101111101011)))
;; x should be Float32(0x10A2EBEB [Rational(10677227, 166153499473114484112975882535043072), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x006964D6)))
;; y should be Float32(0x006964D6 [Rational(3453547, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x00000001)))
(check-sat)
(exit)
