(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b00000000000000000000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x491DC398)))
;; y should be Float32(0x491DC398 [Rational(1292403, 2), 646201.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b10000010011000011000001)))
;; z should be Float32(0x4AC130C1 [Rational(12660929, 2), 6330464.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b10010101 #b10000010011000011000001)))
(check-sat)
(exit)
