(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00111010 #b01101110011011111001011)))
;; x should be Float32(0x9D3737CB [Rational(-12007371, 4951760157141521099596496896), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b11111111111111111111111)))
;; y should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xB80C007F)))
;; z should be Float32(0xB80C007F [Rational(-9175167, 274877906944), -0.000033])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xB80C0080)))
(check-sat)
(exit)
