(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xBC6786EC)))
;; x should be Float32(0xBC6786EC [Rational(-3793339, 268435456), -0.014131])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b01110001111100101001110)))
;; z should be Float32(0xCA38F94E [Rational(-6061223, 2), -3030611.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b1 #b10010100 #b01110001111100101001110))))
(check-sat)
(exit)
