(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10100010101000110101101)))
;; x should be Float32(0x4AD151AD [Rational(13717933, 2), 6858966.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x8054B2BE)))
;; y should be Float32(0x8054B2BE [Rational(-2775391, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AD0D1D7)))
;; z should be Float32(0x4AD0D1D7 [Rational(13685207, 2), 6842603.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x4AD0D1D7)))
(check-sat)
(exit)
