(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b11100111101100101101010)))
;; x should be Float32(0xCA73D96A [Rational(-7990453, 2), -3995226.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10110001 #b11010111010100101011010)))
;; y should be Float32(0xD8EBA95A [Rational(-2072900735598592), -2072900735598592.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF800000)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
