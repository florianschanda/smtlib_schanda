(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00010001 #b11111010010110101110110)))
;; x should be Float32(0x08FD2D76 [Rational(8296123, 5444517870735015415413993718908291383296), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AE4CFDD)))
;; y should be Float32(0x4AE4CFDD [Rational(14995421, 2), 7497710.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF800000)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
