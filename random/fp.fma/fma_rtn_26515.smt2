(assert (= y ((_ to_fp 8 24) #x004AB582)))
;; y should be Float32(0x004AB582 [Rational(2448065, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000000)))
;; z should be Float32(-zero)

