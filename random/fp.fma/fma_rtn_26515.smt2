(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11010011 #b01100010000100010000100)))
;; x should be Float32(0xE9B10884 [Rational(-26752510496733756343189504), -26752510496733756343189504.000000])

