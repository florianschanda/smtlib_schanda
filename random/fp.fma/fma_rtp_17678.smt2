(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xCAD81633)))
;; x should be Float32(0xCAD81633 [Rational(-14161459, 2), -7080729.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x7FD0EE07)))
;; y should be Float32(NaN)

(declare-const z Float32)
(assert (= z (fp #b0 #b01001001 #b11011001110100000010001)))
;; z should be Float32(0x24ECE811 [Rational(15525905, 151115727451828646838272), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
