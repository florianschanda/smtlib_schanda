(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4ADCBA5F)))
;; x should be Float32(0x4ADCBA5F [Rational(14465631, 2), 7232815.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xFFDE81EC)))
;; y should be Float32(NaN)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b10001011110001000111110)))
;; z should be Float32(0xCA45E23E [Rational(-6484255, 2), -3242127.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
