(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xCA658A5E)))
;; x should be Float32(0xCA658A5E [Rational(-7521583, 2), -3760791.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b10001001 #b10101000011001100000110)))
;; z should be Float32(0x44D43306 [Rational(6953347, 4096), 1697.594482])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b10001001 #b10101000011001100000110))))
(check-sat)
(exit)
