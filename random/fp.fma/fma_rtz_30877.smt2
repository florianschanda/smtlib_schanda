(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAA50BC9)))
;; y should be Float32(0xCAA50BC9 [Rational(-10816457, 2), -5408228.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010100 #b00010011100001100011010)))
;; z should be Float32(0x4A09C31A [Rational(4514189, 2), 2257094.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #x4A09C31A))))
(check-sat)
(exit)
