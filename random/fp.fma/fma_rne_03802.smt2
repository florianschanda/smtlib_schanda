(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010001 #b11111100111011000110000)))
;; x should be Float32(0xC8FE7630 [Rational(-1042275, 2), -521137.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA48761E)))
;; y should be Float32(0xCA48761E [Rational(-6568719, 2), -3284359.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AC457E1)))
;; z should be Float32(0x4AC457E1 [Rational(12867553, 2), 6433776.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10100111 #b10001110100000111101111)))
(check-sat)
(exit)
