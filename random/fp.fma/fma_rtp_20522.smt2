(assert (= y ((_ to_fp 8 24) #xC3CBBB74)))
;; y should be Float32(0xC3CBBB74 [Rational(-3337949, 8192), -407.464478])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010100 #b00101010010111100100110)))
;; z should be Float32(0x4A152F26 [Rational(4888467, 2), 2444233.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFFFFFFFF))))
