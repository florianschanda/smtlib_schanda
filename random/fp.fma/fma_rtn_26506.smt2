(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11000100 #b10100100110010010100001)))
;; x should be Float32(0xE25264A1 [Rational(-970266833088512262144), -970266833088512262144.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00258434)))
;; y should be Float32(0x00258434 [Rational(614669, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b01000100 #b11101101010100110010000)))
(check-sat)
(exit)
