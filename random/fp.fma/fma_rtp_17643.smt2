(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10101011101010001111111)))
;; x should be Float32(0xCAD5D47F [Rational(-14013567, 2), -7006783.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC460CA80)))
;; y should be Float32(0xC460CA80 [Rational(-115093, 128), -899.164062])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA1B91E2)))
;; z should be Float32(0xCA1B91E2 [Rational(-5097713, 2), -2548856.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10011111 #b01110111010111110100010)))
(check-sat)
(exit)
