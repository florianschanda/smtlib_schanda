(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ +oo 8 24)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b01001111 #b10001100100010100111101)))
;; y should be Float32(0x27C6453D [Rational(12993853, 2361183241434822606848), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b10010100001010010111001)))
;; z should be Float32(0x004A14B9 [Rational(4854969, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
