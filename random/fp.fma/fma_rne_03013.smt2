(assert (= y ((_ to_fp 8 24) #x00000001)))
;; y should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCAC179D7)))
;; z should be Float32(0xCAC179D7 [Rational(-12679639, 2), -6339819.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b10010101 #b10000010111100111010111)))
(check-sat)
(exit)
