(assert (= y ((_ to_fp 8 24) #x002C2DB5)))
;; y should be Float32(0x002C2DB5 [Rational(2895285, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000001 #b00000000000000000000000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x8A8D6489)))
(check-sat)
(exit)
