(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01100100 #b11000110100010010110000)))
;; x should be Float32(0xB26344B0 [Rational(-930891, 70368744177664), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x7F800000)))
;; y should be Float32(+oo)

(declare-const z Float32)
(assert (= z (fp #b0 #b10010011 #b10111010011111001001100)))
;; z should be Float32(0x49DD3E4C [Rational(3624851, 2), 1812425.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (_ -oo 8 24))))
(check-sat)
(exit)
