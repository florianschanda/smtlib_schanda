(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b01001001001101101110011)))
;; x should be Float32(0x4AA49B73 [Rational(10787699, 2), 5393849.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x0056B4D2)))
;; y should be Float32(0x0056B4D2 [Rational(2841193, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #x0B5F01F4)))
(check-sat)
(exit)
