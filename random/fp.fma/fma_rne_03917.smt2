(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xCAD54393)))
;; x should be Float32(0xCAD54393 [Rational(-13976467, 2), -6988233.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01101111 #b00110010001100101010111)))
;; y should be Float32(0xB7991957 [Rational(-10033495, 549755813888), -0.000018])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #x7F800000))))
(check-sat)
(exit)
