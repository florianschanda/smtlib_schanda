(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b10000100101001100000111)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xFF800000)))
;; y should be Float32(-oo)

(declare-const z Float32)
(assert (= z (fp #b1 #b11111010 #b01111000110000111011100)))
;; z should be Float32(0xFD3C61DC [Rational(-15650186133309679109586028366995128320), -15650186133309679109586028366995128320.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFFFFFFFF))))
(check-sat)
(exit)
