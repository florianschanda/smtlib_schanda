(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC97EA378)))
;; z should be Float32(0xC97EA378 [Rational(-2085999, 2), -1042999.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
