(assert (= y ((_ to_fp 8 24) #xE9C34C59)))
;; y should be Float32(0xE9C34C59 [Rational(-29512634554721667781754880), -29512634554721667781754880.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00800000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b01010101 #b10000110100110001011001)))
(check-sat)
(exit)
