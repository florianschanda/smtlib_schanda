(assert (= x ((_ to_fp 8 24) #xBF2BB0E7)))
;; x should be Float32(0xBF2BB0E7 [Rational(-11251943, 16777216), -0.670668])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b01101100010100010111000)))
;; y should be Float32(0x003628B8 [Rational(443671, 89202980794122492566142873090593446023921664), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #x7F800000))))
(check-sat)
(exit)
