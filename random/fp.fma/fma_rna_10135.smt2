(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b11101001100000100000111)))
;; y should be Float32(0x4AF4C107 [Rational(16040199, 2), 8020099.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11111100 #b01001100011001111001101)))
;; z should be Float32(0x7E2633CD [Rational(55230203083512514925880984126460264448), 55230203083512514925880984126460264448.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b11111100 #b01001100011001111001101)))
(check-sat)
(exit)
