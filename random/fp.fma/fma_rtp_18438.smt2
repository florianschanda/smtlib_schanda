(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x807FFFFF)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010010 #b00110100111100101111000)))
;; y should be Float32(0x491A7978 [Rational(1265455, 2), 632727.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010010 #b10001010111001101101001)))
;; z should be Float32(0x49457369 [Rational(12940137, 16), 808758.562500])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10010010 #b10001010111001101101001)))
(check-sat)
(exit)
