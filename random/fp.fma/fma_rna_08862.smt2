(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA9ABC77)))
;; y should be Float32(0xCA9ABC77 [Rational(-10140791, 2), -5070395.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01100010 #b10011000000010111110011)))
;; z should be Float32(0x314C05F3 [Rational(13370867, 4503599627370496), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result ((_ to_fp 8 24) #x314C05F3))))
(check-sat)
(exit)
