(assert (= y ((_ to_fp 8 24) #xC998182C)))
;; y should be Float32(0xC998182C [Rational(-2491915, 2), -1245957.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b00000010001000000010001)))
;; z should be Float32(0xCA811011 [Rational(-8458257, 2), -4229128.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA811011))))
(check-sat)
(exit)
