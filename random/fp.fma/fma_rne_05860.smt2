(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10011001 #b10001100001100010110110)))
;; x should be Float32(0xCCC618B6 [Rational(-103859632), -103859632.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x007FFFFF)))
;; y should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x15F33C5F)))
;; z should be Float32(0x15F33C5F [Rational(15940703, 162259276829213363391578010288128), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x15F33B99)))
(check-sat)
(exit)
