(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11011001 #b11100101000111001111111)))
;; x should be Float32(0xECF28E7F [Rational(-2345863736990440888098357248), -2345863736990440888098357248.000000])

(declare-const y Float32)
(assert (= y (_ -zero 8 24)))
;; y should be Float32(-zero)

