(assert (= z (fp #b0 #b11101010 #b01101100000011010000000)))
;; z should be Float32(0x75360680 [Rational(230744595682559170959547360608256), 230744595682559170959547360608256.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #x75360680)))
(check-sat)
(exit)
