(assert (= y ((_ to_fp 8 24) #x8004CA8D)))
;; y should be Float32(0x8004CA8D [Rational(-313997, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000001)))
;; z should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b00010011 #b00101111001101100011010)))
(check-sat)
(exit)
