(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x004B8C57)))
;; y should be Float32(0x004B8C57 [Rational(4951127, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b11001001 #b01100010000111011101101)))
;; z should be Float32(0xE4B10EED [Rational(-26129193735460816420864), -26129193735460816420864.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11001001 #b01100010000111011101101)))
(check-sat)
(exit)
