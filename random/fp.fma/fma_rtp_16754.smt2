(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11110100001111111000111)))
;; x should be Float32(0x007A1FC7 [Rational(8003527, 713623846352979940529142984724747568191373312), 0.000000])

