(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b01100000111100001101111)))
;; x should be Float32(0x4AB0786F [Rational(11565167, 2), 5782583.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC1254041)))
;; y should be Float32(0xC1254041 [Rational(-10829889, 1048576), -10.328187])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0A5A7B6D)))
;; z should be Float32(0x0A5A7B6D [Rational(14318445, 1361129467683753853853498429727072845824), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b10011000 #b11000111101001111010100)))
(check-sat)
(exit)
