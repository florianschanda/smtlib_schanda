(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b01011100010011010101110)))
;; x should be Float32(0x802E26AE [Rational(-1512279, 356811923176489970264571492362373784095686656), -0.000000])

