(assert (= y (fp #b0 #b11111110 #b11111111111111111111111)))
;; y should be Float32(0x7F7FFFFF [Rational(340282346638528859811704183484516925440), 340282346638528859811704183484516925440.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00010000 #b10111111101011101110011)))
;; z should be Float32(0x885FD773 [Rational(-14669683, 21778071482940061661655974875633165533184), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00010000 #b10111111101011101110011)))
(check-sat)
(exit)
