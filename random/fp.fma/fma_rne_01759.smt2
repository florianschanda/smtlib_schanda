(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xF61BC70F)))
;; y should be Float32(0xF61BC70F [Rational(-789886133795373709767242516791296), -789886133795373709767242516791296.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA8E0DED)))
;; z should be Float32(0xCA8E0DED [Rational(-9309677, 2), -4654838.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b10010101 #b00011100000110111101101)))
(check-sat)
(exit)
