(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x2FF888A5)))
;; y should be Float32(0x2FF888A5 [Rational(16287909, 36028797018963968), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b10100100101000111111011)))
;; z should be Float32(0x805251FB [Rational(-5394939, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (_ -oo 8 24)))
(check-sat)
(exit)
