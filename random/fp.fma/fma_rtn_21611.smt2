(assert (= z ((_ to_fp 8 24) #x24BBCEEC)))
;; z should be Float32(0x24BBCEEC [Rational(3077051, 37778931862957161709568), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (_ -oo 8 24))))
(check-sat)
(exit)
