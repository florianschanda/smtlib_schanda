(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xFF800000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x0CD4FEA1)))
;; y should be Float32(0x0CD4FEA1 [Rational(13958817, 42535295865117307932921825928971026432), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b01000111000110010001011)))
;; z should be Float32(0x4AA38C8B [Rational(10718347, 2), 5359173.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
