(assert (= z (fp #b0 #b10010001 #b11100011111010100110000)))
;; z should be Float32(0x48F1F530 [Rational(991059, 2), 495529.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
