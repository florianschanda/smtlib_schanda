(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b00101110 #b01011001010100010111110)))
;; y should be Float32(0x172CA8BE [Rational(5657695, 10141204801825835211973625643008), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCACEECBD)))
;; z should be Float32(0xCACEECBD [Rational(-13561021, 2), -6780510.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b10010101 #b10011101110110010111101)))
(check-sat)
(exit)
