(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ -zero 8 24)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xB970C78C)))
;; y should be Float32(0xB970C78C [Rational(-3944931, 17179869184), -0.000230])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b11100010100000011111001)))
;; z should be Float32(0xCAF140F9 [Rational(-15810809, 2), -7905404.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b1 #b10010101 #b11100010100000011111001)))
(check-sat)
(exit)
