(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x198513AC)))
;; y should be Float32(0x198513AC [Rational(2180331, 158456325028528675187087900672), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AFAABE9)))
;; z should be Float32(0x4AFAABE9 [Rational(16428009, 2), 8214004.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x4AFAABE9)))
(check-sat)
(exit)
