(assert (= z ((_ to_fp 8 24) #xCAA33D43)))
;; z should be Float32(0xCAA33D43 [Rational(-10698051, 2), -5349025.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
