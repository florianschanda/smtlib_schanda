(assert (= z (fp #b1 #b00000000 #b00110101110010010100111)))
;; z should be Float32(0x801AE4A7 [Rational(-1762471, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
