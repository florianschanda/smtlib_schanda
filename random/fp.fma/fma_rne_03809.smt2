(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b10001110111110001011010)))
;; x should be Float32(0xCA477C5A [Rational(-6536749, 2), -3268374.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAF68393)))
;; y should be Float32(0xCAF68393 [Rational(-16155539, 2), -8077769.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b10110101100000111001100)))
;; z should be Float32(0x005AC1CC [Rational(1486963, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x55C01806)))
(check-sat)
(exit)
