(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4AFEE065)))
;; x should be Float32(0x4AFEE065 [Rational(16703589, 2), 8351794.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b11100111 #b00001010100110110010101)))
;; y should be Float32(0xF3854D95 [Rational(-21122712180201046099960369512448), -21122712180201046099960369512448.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7FEE1F31)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
