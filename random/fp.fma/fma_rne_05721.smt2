(assert (= z (fp #b0 #b10010011 #b01010111010101001111100)))
;; z should be Float32(0x49ABAA7C [Rational(2812575, 2), 1406287.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
