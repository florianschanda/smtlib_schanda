(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b01111111000001111010001)))
;; x should be Float32(0x003F83D1 [Rational(4162513, 713623846352979940529142984724747568191373312), 0.000000])

