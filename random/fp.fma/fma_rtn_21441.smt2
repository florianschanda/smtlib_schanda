(assert (= z (fp #b0 #b00000000 #b10110011000010111001110)))
;; z should be Float32(0x005985CE [Rational(2933479, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
