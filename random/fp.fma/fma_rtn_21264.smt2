(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10101111101010011001001)))
;; x should be Float32(0x4AD7D4C9 [Rational(14144713, 2), 7072356.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b11110001011101001100011)))
;; y should be Float32(0x8078BA63 [Rational(-7912035, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (_ +oo 8 24))))
(check-sat)
(exit)
