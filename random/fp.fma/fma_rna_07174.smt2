(assert (= y ((_ to_fp 8 24) #xDE110337)))
;; y should be Float32(0xDE110337 [Rational(-2612314008392302592), -2612314008392302592.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA250496)))
;; z should be Float32(0xCA250496 [Rational(-5407307, 2), -2703653.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b1 #b10010100 #b01001010000010010010110))))
(check-sat)
(exit)
