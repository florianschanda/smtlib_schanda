(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x0893F5FA)))
;; y should be Float32(0x0893F5FA [Rational(4848381, 5444517870735015415413993718908291383296), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A9C23CD)))
;; z should be Float32(0x4A9C23CD [Rational(10232781, 2), 5116390.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
