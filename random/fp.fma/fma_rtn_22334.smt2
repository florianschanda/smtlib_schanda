(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x9D2E0A8A)))
;; y should be Float32(0x9D2E0A8A [Rational(-5702981, 2475880078570760549798248448), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00291D01)))
;; z should be Float32(0x00291D01 [Rational(2694401, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b00000000 #b01010010001110100000000)))
(check-sat)
(exit)
