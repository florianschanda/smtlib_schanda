(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01110010 #b00100011100100100001011)))
;; x should be Float32(0x3911C90B [Rational(9554187, 68719476736), 0.000139])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b00000000000000000000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x78C16D88)))
;; z should be Float32(0x78C16D88 [Rational(31385464105441303260390898872090624), 31385464105441303260390898872090624.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b11110001 #b10000010110110110001000))))
(check-sat)
(exit)
