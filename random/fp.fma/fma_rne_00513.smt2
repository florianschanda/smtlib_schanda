(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b11011111010001101111111)))
;; x should be Float32(0x4AEFA37F [Rational(15704959, 2), 7852479.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x541DD0EE)))
;; y should be Float32(0x541DD0EE [Rational(2711260495872), 2711260495872.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF97661C)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
