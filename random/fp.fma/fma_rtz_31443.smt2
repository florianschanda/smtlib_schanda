(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x45502800)))
;; y should be Float32(0x45502800 [Rational(6661, 2), 3330.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b11100001 #b01110100000001000111110)))
;; z should be Float32(0xF0BA023E [Rational(-460535379721050799673295503360), -460535379721050799673295503360.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #xFF800000)))
(check-sat)
(exit)
