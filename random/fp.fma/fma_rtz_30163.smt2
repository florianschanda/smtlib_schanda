(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x3AB75D72)))
;; x should be Float32(0x3AB75D72 [Rational(6008505, 4294967296), 0.001399])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010011 #b01111100010000101101100)))
;; y should be Float32(0xC9BE216C [Rational(-3115099, 2), -1557549.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xC5082F4B))))
(check-sat)
(exit)
