(assert (= z ((_ to_fp 8 24) #x803A0A0A)))
;; z should be Float32(0x803A0A0A [Rational(-1901829, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
