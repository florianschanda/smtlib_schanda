(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ +oo 8 24)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b00101011110000100010000)))
;; y should be Float32(0x8015E110 [Rational(-89617, 44601490397061246283071436545296723011960832), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x9CF79D29)))
;; z should be Float32(0x9CF79D29 [Rational(-16227625, 9903520314283042199192993792), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #xFF800000)))
(check-sat)
(exit)
