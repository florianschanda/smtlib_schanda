(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAD1B5F9)))
;; y should be Float32(0xCAD1B5F9 [Rational(-13743609, 2), -6871804.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4871D5A0)))
;; z should be Float32(0x4871D5A0 [Rational(495277, 2), 247638.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10010000 #b11100011101010110100000)))
(check-sat)
(exit)
