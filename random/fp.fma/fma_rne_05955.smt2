(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xF4D10F36)))
;; x should be Float32(0xF4D10F36 [Rational(-132507148180982607384455931756544), -132507148180982607384455931756544.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b11101000 #b00011110001100010000010)))
;; z should be Float32(0x740F1882 [Rational(45348848160528249837275565785088), 45348848160528249837275565785088.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b11101000 #b00011110001100010000010)))
(check-sat)
(exit)
