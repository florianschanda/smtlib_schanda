(assert (= z ((_ to_fp 8 24) #x8025231F)))
;; z should be Float32(0x8025231F [Rational(-2433823, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b00000000 #b01001010010001100011111)))
(check-sat)
(exit)
