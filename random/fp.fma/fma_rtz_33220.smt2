(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xC0A2A1DD)))
;; x should be Float32(0xC0A2A1DD [Rational(-10658269, 2097152), -5.082259])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000000000000000000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b11001101 #b01110010000101001110100)))
;; z should be Float32(0x66B90A74 [Rational(436915312726264929845248), 436915312726264929845248.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x66B90A74)))
(check-sat)
(exit)
