(assert (= z ((_ to_fp 8 24) #x42C957D0)))
;; z should be Float32(0x42C957D0 [Rational(824701, 8192), 100.671509])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x42C957D0)))
(check-sat)
