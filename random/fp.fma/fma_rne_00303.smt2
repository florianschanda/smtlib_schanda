(assert (= z (fp #b1 #b00000000 #b00001000010000011111110)))
;; z should be Float32(0x800420FE [Rational(-135295, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
