(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x7DD4BEC9)))
;; y should be Float32(0x7DD4BEC9 [Rational(35348368534231764536347888059936669696), 35348368534231764536347888059936669696.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x807FB97F)))
;; z should be Float32(0x807FB97F [Rational(-8370559, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
