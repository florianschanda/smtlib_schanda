(assert (= z ((_ to_fp 8 24) #x800A31F8)))
;; z should be Float32(0x800A31F8 [Rational(-83519, 89202980794122492566142873090593446023921664), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
