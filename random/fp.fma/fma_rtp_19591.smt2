(assert (= z ((_ to_fp 8 24) #x4A1A86AE)))
;; z should be Float32(0x4A1A86AE [Rational(5063511, 2), 2531755.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10010100 #b00110101000011010101110)))
(check-sat)
(exit)
