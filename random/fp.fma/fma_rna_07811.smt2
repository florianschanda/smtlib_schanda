(assert (= z (fp #b0 #b10010001 #b11111011111101101110000)))
;; z should be Float32(0x48FDFB70 [Rational(1040311, 2), 520155.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #xFF800000)))
(check-sat)
(exit)
