(assert (= z (fp #b1 #b00000000 #b00011101101010111111001)))
;; z should be Float32(0x800ED5F9 [Rational(-972281, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
