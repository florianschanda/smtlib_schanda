(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b01000101000110001100111)))
;; x should be Float32(0x4AA28C67 [Rational(10652775, 2), 5326387.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AC39AF3)))
;; y should be Float32(0x4AC39AF3 [Rational(12819187, 2), 6409593.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xDE68055B)))
;; z should be Float32(0xDE68055B [Rational(-4179717311810240512), -4179717311810240512.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (fp #b1 #b10111100 #b11010000000010011011110))))
(check-sat)
(exit)
