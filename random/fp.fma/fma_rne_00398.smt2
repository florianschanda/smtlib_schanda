(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b01100100110110000110101)))
;; x should be Float32(0x4AB26C35 [Rational(11693109, 2), 5846554.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x49A5B43C)))
;; y should be Float32(0x49A5B43C [Rational(2714895, 2), 1357447.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x801BE987)))
;; z should be Float32(0x801BE987 [Rational(-1829255, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x54E6FAB8)))
(check-sat)
(exit)
