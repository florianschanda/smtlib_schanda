(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00800000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A95900B)))
;; y should be Float32(0x4A95900B [Rational(9801739, 2), 4900869.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0021D822)))
;; z should be Float32(0x0021D822 [Rational(1109009, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b0 #b00010111 #b00101011001000000001100))))
(check-sat)
(exit)
