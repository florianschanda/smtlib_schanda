(assert (= y (fp #b1 #b10010101 #b11011001111110111011001)))
;; y should be Float32(0xCAECFDD9 [Rational(-15531481, 2), -7765740.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00010010 #b00111001100001111010000)))
;; z should be Float32(0x891CC3D0 [Rational(-642109, 340282366920938463463374607431768211456), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00010111 #b11100011110001111110111)))
(check-sat)
(exit)
