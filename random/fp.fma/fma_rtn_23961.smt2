(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b11011001 #b11011001111100011001011)))
;; y should be Float32(0x6CECF8CB [Rational(2291851080046808962261057536), 2291851080046808962261057536.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4AD10155)))
;; z should be Float32(0x4AD10155 [Rational(13697365, 2), 6848682.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b0 #b10010101 #b10100010000000101010101))))
(check-sat)
(exit)
