(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA27DEDE)))
;; y should be Float32(0xCA27DEDE [Rational(-5500783, 2), -2750391.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11110100 #b00100110111000010001101)))
;; z should be Float32(0x7A13708D [Rational(191387609812785789938266435559096320), 191387609812785789938266435559096320.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7A13708D)))
(check-sat)
(exit)
