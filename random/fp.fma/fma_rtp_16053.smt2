(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00000001)))
;; x should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00101011000111100010000)))
;; y should be Float32(0x00158F10 [Rational(88305, 44601490397061246283071436545296723011960832), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC2CFF430)))
;; z should be Float32(0xC2CFF430 [Rational(-851779, 8192), -103.976929])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xC2CFF42F)))
(check-sat)
(exit)
