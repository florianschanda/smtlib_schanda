(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00101001110010010101000)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b0 #b10111010 #b10101101101110001110011)))
;; y should be Float32(0x5D56DC73 [Rational(967648503926882304), 967648503926882304.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x804A51A0)))
;; z should be Float32(0x804A51A0 [Rational(-152205, 22300745198530623141535718272648361505980416), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
