(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b01111101111010111110111)))
;; x should be Float32(0x4ABEF5F7 [Rational(12514807, 2), 6257403.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A8D5415)))
;; y should be Float32(0x4A8D5415 [Rational(9262101, 2), 4631050.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFD12AD62)))
;; z should be Float32(0xFD12AD62 [Rational(-12185471401079087530462072093531963392), -12185471401079087530462072093531963392.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b11111010 #b00100101010110101100001)))
(check-sat)
(exit)
