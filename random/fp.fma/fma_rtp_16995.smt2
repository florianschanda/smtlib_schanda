(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010011 #b11000101011100100101100)))
;; y should be Float32(0x49E2B92C [Rational(3714635, 2), 1857317.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b01010111111100101001101)))
;; z should be Float32(0x002BF94D [Rational(2881869, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b00000000 #b01010111111100101001101)))
(check-sat)
(exit)
