(assert (= z ((_ to_fp 8 24) #xCA46AEF6)))
;; z should be Float32(0xCA46AEF6 [Rational(-6510459, 2), -3255229.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
