(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A65C862)))
;; x should be Float32(0x4A65C862 [Rational(7529521, 2), 3764760.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000000000000000000001)))
;; y should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x3F7C3F5F)))
;; z should be Float32(0x3F7C3F5F [Rational(16531295, 16777216), 0.985342])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x3F7C3F5F)))
(check-sat)
(exit)
