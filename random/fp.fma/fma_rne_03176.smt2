(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b00111100011100110010110)))
;; x should be Float32(0x001E3996 [Rational(990411, 356811923176489970264571492362373784095686656), 0.000000])

