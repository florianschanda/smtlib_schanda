(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A16EEFE)))
;; y should be Float32(0x4A16EEFE [Rational(4945791, 2), 2472895.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA84E333)))
;; z should be Float32(0xCA84E333 [Rational(-8708915, 2), -4354457.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA84E333))))
(check-sat)
(exit)
