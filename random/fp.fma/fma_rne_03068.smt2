(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b10101101010100010011111)))
;; x should be Float32(0x0056A89F [Rational(5679263, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

