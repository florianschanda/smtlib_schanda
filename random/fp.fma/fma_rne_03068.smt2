(assert (= z (fp #b0 #b00000000 #b00001110111000000000100)))
;; z should be Float32(0x00077004 [Rational(121857, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
