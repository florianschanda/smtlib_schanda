(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x47B68CC0)))
;; y should be Float32(0x47B68CC0 [Rational(186931, 2), 93465.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00101011 #b01011000001110011110001)))
;; z should be Float32(0x15AC1CF1 [Rational(11279601, 162259276829213363391578010288128), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b00101011 #b01011000001110011110000)))
(check-sat)
(exit)
