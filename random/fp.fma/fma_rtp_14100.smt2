(assert (= z (fp #b0 #b10010101 #b10111011100111110111111)))
;; z should be Float32(0x4ADDCFBF [Rational(14536639, 2), 7268319.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10101000 #b10101000001001101110000)))
(check-sat)
(exit)
