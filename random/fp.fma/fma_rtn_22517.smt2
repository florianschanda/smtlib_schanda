(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00800000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x391D0C35)))
;; y should be Float32(0x391D0C35 [Rational(10292277, 68719476736), 0.000150])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010001 #b11101000101111101010000)))
;; z should be Float32(0x48F45F50 [Rational(1000949, 2), 500474.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b0 #b10010001 #b11101000101111101010000))))
(check-sat)
(exit)
