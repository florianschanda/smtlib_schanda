(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010010 #b10000000101110010001000)))
;; x should be Float32(0x49405C88 [Rational(1575825, 2), 787912.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10110110010101110000001)))
;; y should be Float32(0xCADB2B81 [Rational(-14363521, 2), -7181760.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80800000)))
;; z should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result ((_ to_fp 8 24) #xD4A4AFD9))))
(check-sat)
(exit)
