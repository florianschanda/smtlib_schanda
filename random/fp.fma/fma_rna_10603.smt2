(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10011000001000110011001)))
;; x should be Float32(0xCACC1199 [Rational(-13373849, 2), -6686924.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x76BE74C2)))
;; y should be Float32(0x76BE74C2 [Rational(1931454165818688692327080725053440), 1931454165818688692327080725053440.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
