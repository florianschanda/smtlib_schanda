(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10001101110011111000111)))
;; x should be Float32(0x4AC6E7C7 [Rational(13035463, 2), 6517731.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AEBBA39)))
;; y should be Float32(0x4AEBBA39 [Rational(15448633, 2), 7724316.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4942C6E8)))
;; z should be Float32(0x4942C6E8 [Rational(1595613, 2), 797806.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x56372775)))
(check-sat)
(exit)
