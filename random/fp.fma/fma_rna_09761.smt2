(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b10011110010110011100000)))
;; x should be Float32(0x004F2CE0 [Rational(162151, 22300745198530623141535718272648361505980416), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000000)))
;; y should be Float32(+zero)

