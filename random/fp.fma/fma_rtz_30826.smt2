(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b11010100 #b10011100111101011000110)))
;; y should be Float32(0x6A4E7AC6 [Rational(62404625001712575299190784), 62404625001712575299190784.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x2781378C)))
;; z should be Float32(0x2781378C [Rational(2117091, 590295810358705651712), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b0 #b01001111 #b00000010011011110001100)))
(check-sat)
(exit)
