(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10011010 #b10111000010111101000000)))
;; x should be Float32(0x4D5C2F40 [Rational(230880256), 230880256.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10011110010100001000111)))
;; y should be Float32(0xCACF2847 [Rational(-13576263, 2), -6788131.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10110001 #b01100100010110011011010)))
(check-sat)
(exit)
