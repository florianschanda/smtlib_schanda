(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10001111010111001011111)))
;; x should be Float32(0x4AC7AE5F [Rational(13086303, 2), 6543151.500000])

