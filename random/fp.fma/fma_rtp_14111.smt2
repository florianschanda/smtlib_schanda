(assert (= y (fp #b0 #b10010101 #b10110011111101110100001)))
;; y should be Float32(0x4AD9FBA1 [Rational(14285729, 2), 7142864.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF7FFFFF)))
;; z should be Float32(0xFF7FFFFF [Rational(-340282346638528859811704183484516925440), -340282346638528859811704183484516925440.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b11111110 #b11111111111111111111110)))
(check-sat)
(exit)
