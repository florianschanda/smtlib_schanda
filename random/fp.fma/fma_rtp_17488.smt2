(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010011 #b10110111100011001000100)))
;; x should be Float32(0xC9DBC644 [Rational(-3600785, 2), -1800392.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x006BA250)))
;; y should be Float32(0x006BA250 [Rational(440869, 44601490397061246283071436545296723011960832), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x3FBCB48E)))
;; z should be Float32(0x3FBCB48E [Rational(6183495, 4194304), 1.474260])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b01111111 #b01111001011010010001110)))
(check-sat)
(exit)
