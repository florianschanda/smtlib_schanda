(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b11110010101010001101011)))
;; x should be Float32(0xCAF9546B [Rational(-16340075, 2), -8170037.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010100 #b11011001001001111001110)))
;; y should be Float32(0xCA6C93CE [Rational(-7752167, 2), -3876083.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11111111 #b00000000000000000000000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
