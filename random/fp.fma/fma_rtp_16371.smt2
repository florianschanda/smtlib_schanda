(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111001 #b10101100100010101000100)))
;; x should be Float32(0x7CD64544 [Rational(8900451212033248381917879486243667968), 8900451212033248381917879486243667968.000000])

