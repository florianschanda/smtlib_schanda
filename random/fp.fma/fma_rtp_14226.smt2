(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A862B97)))
;; x should be Float32(0x4A862B97 [Rational(8792983, 2), 4396491.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x0A6461AA)))
;; y should be Float32(0x0A6461AA [Rational(7483605, 680564733841876926926749214863536422912), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b11111111111111111111111)))
;; z should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b00101010 #b11011110110010000000101)))
(check-sat)
(exit)
