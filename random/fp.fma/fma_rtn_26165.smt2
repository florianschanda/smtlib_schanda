(assert (= z ((_ to_fp 8 24) #x4A59E5BA)))
;; z should be Float32(0x4A59E5BA [Rational(7140061, 2), 3570030.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b0 #b10010100 #b10110011110010110111010))))
(check-sat)
(exit)
