(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7A67C0C5)))
;; x should be Float32(0x7A67C0C5 [Rational(300832601228365403246612113113743360), 300832601228365403246612113113743360.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b10101000001001110101001)))
;; z should be Float32(0x4AD413A9 [Rational(13898665, 2), 6949332.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b10010101 #b10101000001001110101001)))
(check-sat)
(exit)
