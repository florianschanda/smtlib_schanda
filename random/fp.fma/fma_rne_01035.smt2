(assert (= y ((_ to_fp 8 24) #xD3CE17C6)))
;; y should be Float32(0xD3CE17C6 [Rational(-1770324230144), -1770324230144.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00011100011001000010010)))
;; z should be Float32(0x000E3212 [Rational(465161, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
