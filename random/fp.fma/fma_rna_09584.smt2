(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x50925CED)))
;; z should be Float32(0x50925CED [Rational(19644508160), 19644508160.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b10100001 #b00100100101110011101101)))
(check-sat)
(exit)
