(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b01111100111000110010011)))
;; y should be Float32(0x803E7193 [Rational(-4092307, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0A6D698F)))
;; z should be Float32(0x0A6D698F [Rational(15559055, 1361129467683753853853498429727072845824), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b00010100 #b11011010110100110001111)))
(check-sat)
(exit)
