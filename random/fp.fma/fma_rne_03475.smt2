(set-info :status unsat)
(declare-const x Float32)
(assert (= x (_ -zero 8 24)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b11111111 #b00000000000000000000000)))
;; y should be Float32(-oo)

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xF112F9E0)))
;; z should be Float32(0xF112F9E0 [Rational(-727790268369481367981563838464), -727790268369481367981563838464.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
