(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b10100111001010010101110)))
;; x should be Float32(0x805394AE [Rational(-2738775, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const y Float32)
(assert (= y (_ -zero 8 24)))
;; y should be Float32(-zero)

