(assert (= z ((_ to_fp 8 24) #xC92D0658)))
;; z should be Float32(0xC92D0658 [Rational(-1417419, 2), -708709.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
