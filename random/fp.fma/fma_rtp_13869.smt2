(assert (= y ((_ to_fp 8 24) #x36E9834D)))
;; y should be Float32(0x36E9834D [Rational(15303501, 2199023255552), 0.000007])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b01011100001110100011110)))
;; z should be Float32(0x802E1D1E [Rational(-1511055, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00000000 #b01011100001110100011110)))
(check-sat)
(exit)
