(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010001 #b00001010000100110010000)))
;; x should be Float32(0x48850990 [Rational(544921, 2), 272460.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x807F7E2F)))
;; y should be Float32(0x807F7E2F [Rational(-8355375, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b1 #b00010011 #b00001001000001010100011))))
(check-sat)
(exit)
