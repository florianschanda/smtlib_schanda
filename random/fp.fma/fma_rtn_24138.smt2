(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ -zero 8 24)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b01001010 #b00101100100011001010110)))
;; y should be Float32(0xA5164656 [Rational(-4924203, 37778931862957161709568), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010010 #b11011001100101111100000)))
;; z should be Float32(0x496CCBE0 [Rational(969918), 969918.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x496CCBE0)))
(check-sat)
(exit)
