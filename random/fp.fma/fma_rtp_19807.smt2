(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xD8AD32BB)))
;; x should be Float32(0xD8AD32BB [Rational(-1523467178475520), -1523467178475520.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01110100 #b10111111110111010100101)))
;; y should be Float32(0xBA5FEEA5 [Rational(-14675621, 17179869184), -0.000854])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0052CD88)))
;; z should be Float32(0x0052CD88 [Rational(678321, 89202980794122492566142873090593446023921664), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x539780A6)))
(check-sat)
(exit)
