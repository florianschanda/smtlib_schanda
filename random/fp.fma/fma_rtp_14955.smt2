(assert (= y (fp #b0 #b00000000 #b11111011110111100101111)))
;; y should be Float32(0x007DEF2F [Rational(8253231, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A60A23A)))
;; z should be Float32(0x4A60A23A [Rational(7360797, 2), 3680398.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10010100 #b11000001010001001001010)))
(check-sat)
(exit)
