(assert (= y ((_ to_fp 8 24) #x4AB80E75)))
;; y should be Float32(0x4AB80E75 [Rational(12062325, 2), 6031162.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b11111111 #b00000000000000000000000)))
;; z should be Float32(-oo)

