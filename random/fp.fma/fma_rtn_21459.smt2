(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00001011111110000100000)))
;; y should be Float32(0x0005FC20 [Rational(12257, 22300745198530623141535718272648361505980416), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00100100 #b00001110001000100000010)))
;; z should be Float32(0x12071102 [Rational(4425857, 10384593717069655257060992658440192), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
