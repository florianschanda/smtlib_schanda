(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b11000111010110010101111)))
;; x should be Float32(0x4AE3ACAF [Rational(14920879, 2), 7460439.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xB0B5D722)))
;; y should be Float32(0xB0B5D722 [Rational(-5958545, 4503599627370496), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x15675DE1)))
;; z should be Float32(0x15675DE1 [Rational(15162849, 324518553658426726783156020576256), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #xBC21B86C)))
(check-sat)
(exit)
