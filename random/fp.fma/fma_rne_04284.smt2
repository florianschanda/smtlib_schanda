(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b01101111 #b11001101110110111001010)))
;; y should be Float32(0xB7E6EDCA [Rational(-7567077, 274877906944), -0.000028])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b10111111110001111110111)))
;; z should be Float32(0x005FE3F7 [Rational(6284279, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b0 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
