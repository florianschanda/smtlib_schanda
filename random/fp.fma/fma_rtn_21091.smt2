(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b11100101100110000011111)))
;; x should be Float32(0x4AF2CC1F [Rational(15911967, 2), 7955983.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00245135)))
;; y should be Float32(0x00245135 [Rational(2380085, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b00010110 #b00010011100011011100100)))
(check-sat)
(exit)
