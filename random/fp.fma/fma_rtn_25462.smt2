(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b01010110101110010111101)))
;; y should be Float32(0xCAAB5CBD [Rational(-11230397, 2), -5615198.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b10010111010010110110011)))
;; z should be Float32(0x4ACBA5B3 [Rational(13346227, 2), 6673113.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x4ACBA5B3)))
(check-sat)
(exit)
