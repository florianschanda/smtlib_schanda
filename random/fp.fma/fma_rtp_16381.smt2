(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x6599C08C)))
;; x should be Float32(0x6599C08C [Rational(90759241850546657689600), 90759241850546657689600.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10100011 #b10111111001110101000110)))
;; y should be Float32(0x51DF9D46 [Rational(120052039680), 120052039680.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
