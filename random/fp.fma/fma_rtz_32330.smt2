(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA9C9EAD)))
;; y should be Float32(0xCA9C9EAD [Rational(-10264237, 2), -5132118.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010001 #b00110000110010110110000)))
;; z should be Float32(0xC89865B0 [Rational(-624219, 2), -312109.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #xC89865AF)))
(check-sat)
(exit)
