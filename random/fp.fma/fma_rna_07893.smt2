(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xA82291B7)))
;; y should be Float32(0xA82291B7 [Rational(-10654135, 1180591620717411303424), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x30D8FF84)))
;; z should be Float32(0x30D8FF84 [Rational(3555297, 2251799813685248), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (_ -oo 8 24))))
(check-sat)
(exit)
