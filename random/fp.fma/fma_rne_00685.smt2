(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010000 #b10100100011000001100000)))
;; x should be Float32(0x48523060 [Rational(430467, 2), 215233.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x8039B18E)))
;; y should be Float32(0x8039B18E [Rational(-1890503, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b00010001 #b01111010111101000110110)))
(check-sat)
(exit)
