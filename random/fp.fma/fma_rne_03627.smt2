(assert (= z (fp #b1 #b10011000 #b00000100100101100001110)))
;; z should be Float32(0xCC024B0E [Rational(-34155576), -34155576.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b10011000 #b00000100100101100001110))))
(check-sat)
(exit)
