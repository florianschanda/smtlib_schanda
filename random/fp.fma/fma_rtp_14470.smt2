(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7F800000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b00011100010101001111111)))
;; y should be Float32(0x4A8E2A7F [Rational(9316991, 2), 4658495.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA37B0C6)))
;; z should be Float32(0xCA37B0C6 [Rational(-6019171, 2), -3009585.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
