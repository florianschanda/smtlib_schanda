(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b00000111 #b11000010011010111110000)))
;; y should be Float32(0x03E135F0 [Rational(922463, 696898287454081973172991196020261297061888), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b11100001101010001111101)))
;; z should be Float32(0x4AF0D47D [Rational(15783037, 2), 7891518.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x4AF0D47D)))
(check-sat)
(exit)
