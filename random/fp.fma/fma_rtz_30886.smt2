(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAB4E005)))
;; y should be Float32(0xCAB4E005 [Rational(-11853829, 2), -5926914.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA106676)))
;; z should be Float32(0xCA106676 [Rational(-4731707, 2), -2365853.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA106676))))
(check-sat)
(exit)
