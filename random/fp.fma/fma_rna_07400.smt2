(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b10110111100000011101111)))
;; z should be Float32(0x005BC0EF [Rational(6013167, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b0 #b00000000 #b10110111100000011101111))))
(check-sat)
(exit)
