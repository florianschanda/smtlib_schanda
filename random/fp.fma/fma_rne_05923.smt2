(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10001001 #b01101100001111110100100)))
;; x should be Float32(0xC4B61FA4 [Rational(-2983913, 2048), -1456.988770])

(declare-const y Float32)
(assert (= y (fp #b0 #b01001001 #b11111010010100000000000)))
;; y should be Float32(0x24FD2800 [Rational(8101, 73786976294838206464), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x807FFFFF)))
;; z should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #xAA3419BA)))
(check-sat)
(exit)
