(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b11000110010101010011111)))
;; x should be Float32(0xCAE32A9F [Rational(-14887583, 2), -7443791.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000001)))
;; y should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x000BCBC3)))
;; z should be Float32(0x000BCBC3 [Rational(773059, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #x8065C98C))))
(check-sat)
(exit)
