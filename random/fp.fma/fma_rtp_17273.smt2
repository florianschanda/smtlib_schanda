(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xBD2CBB0F)))
;; y should be Float32(0xBD2CBB0F [Rational(-11320079, 268435456), -0.042171])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b00000000101010010010011)))
;; z should be Float32(0x4A805493 [Rational(8410259, 2), 4205129.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10010101 #b00000000101010010010011)))
(check-sat)
(exit)
