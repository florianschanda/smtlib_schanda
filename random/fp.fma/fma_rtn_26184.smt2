(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000001)))
;; x should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAB8FF81)))
;; y should be Float32(0xCAB8FF81 [Rational(-12124033, 2), -6062016.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4907B708)))
;; z should be Float32(0x4907B708 [Rational(1111777, 2), 555888.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b10010010 #b00001111011011100001000)))
(check-sat)
(exit)
