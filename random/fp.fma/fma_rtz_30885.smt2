(assert (= x (_ -zero 8 24)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b11000010000011111001001)))
;; y should be Float32(0xCAE107C9 [Rational(-14747593, 2), -7373796.500000])

