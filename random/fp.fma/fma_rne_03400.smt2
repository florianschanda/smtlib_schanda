(assert (= y (fp #b0 #b11101111 #b10000111111110100001100)))
;; y should be Float32(0x77C3FD0C [Rational(7950236623296604932443410635161600), 7950236623296604932443410635161600.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b01010001000001110001111)))
;; z should be Float32(0x8028838F [Rational(-2655119, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b00000000 #b01010001000001110001111)))
(check-sat)
(exit)
