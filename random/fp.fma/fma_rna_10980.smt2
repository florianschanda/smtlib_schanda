(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xFF800000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10110111 #b10001010110011011000111)))
;; y should be Float32(0x5BC566C7 [Rational(111127150593048576), 111127150593048576.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b11010111 #b01100010100100111110110)))
;; z should be Float32(0xEBB149F6 [Rational(-428658281448161961146580992), -428658281448161961146580992.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result ((_ to_fp 8 24) #xFF800000))))
(check-sat)
(exit)
