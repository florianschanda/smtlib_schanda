(assert (= z (fp #b0 #b10010101 #b01011100101100100110011)))
;; z should be Float32(0x4AAE5933 [Rational(11426099, 2), 5713049.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (_ -oo 8 24)))
(check-sat)
(exit)
