(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b11111001001110101011010)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xDE042A35)))
;; y should be Float32(0xDE042A35 [Rational(-2380870659036151808), -2380870659036151808.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10100000 #b00011001010011001000111)))
;; z should be Float32(0x500CA647 [Rational(9438829568), 9438829568.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
