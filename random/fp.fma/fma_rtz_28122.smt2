(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b00010000101010100110101)))
;; x should be Float32(0x4A885535 [Rational(8934709, 2), 4467354.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b01011001010111110001000)))
;; y should be Float32(0x802CAF88 [Rational(-366065, 89202980794122492566142873090593446023921664), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4ADB2855)))
;; z should be Float32(0x4ADB2855 [Rational(14362709, 2), 7181354.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x4ADB2854)))
(check-sat)
(exit)
