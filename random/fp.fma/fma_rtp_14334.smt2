(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010010 #b11000100101010111111000)))
;; x should be Float32(0x496255F8 [Rational(1854143, 2), 927071.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b11111111111111111111111)))
;; y should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x44A1CFC0)))
;; z should be Float32(0x44A1CFC0 [Rational(165695, 128), 1294.492188])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10001001 #b01000011100111111000000)))
(check-sat)
(exit)
