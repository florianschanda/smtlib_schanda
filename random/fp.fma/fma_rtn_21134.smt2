(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10101000101110110001111)))
;; x should be Float32(0x4AD45D8F [Rational(13917583, 2), 6958791.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA67EF12)))
;; y should be Float32(0xCA67EF12 [Rational(-7600009, 2), -3800004.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000001 #b00000000000000000000000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10101011 #b10000000110011010111111)))
(check-sat)
(exit)
