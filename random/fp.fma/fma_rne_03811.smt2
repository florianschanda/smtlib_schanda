(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b11011110101001000000010)))
;; x should be Float32(0xCA6F5202 [Rational(-7842049, 2), -3921024.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCA9BD507)))
;; y should be Float32(0xCA9BD507 [Rational(-10212615, 2), -5106307.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xC85E7DA0)))
;; z should be Float32(0xC85E7DA0 [Rational(-455661, 2), -227830.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10101011 #b00100011010110111001101)))
(check-sat)
(exit)
