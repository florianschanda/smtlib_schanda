(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01101110 #b00111000011000110001101)))
;; x should be Float32(0xB71C318D [Rational(-10236301, 1099511627776), -0.000009])

(declare-const y Float32)
(assert (= y (fp #b1 #b10001100 #b11000101111101010110110)))
;; y should be Float32(0xC662FAB6 [Rational(-7437659, 512), -14526.677734])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #x3E0A7CB6)))
(check-sat)
(exit)
