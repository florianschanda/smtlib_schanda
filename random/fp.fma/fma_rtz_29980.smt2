(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10000100 #b01111001011110101000100)))
;; x should be Float32(0x423CBD44 [Rational(3092305, 65536), 47.184830])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b01010001 #b01000100110010001100001)))
;; z should be Float32(0xA8A26461 [Rational(-10642529, 590295810358705651712), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (fp #b1 #b01010001 #b01000100110010001100001))))
(check-sat)
(exit)
