(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b01010010111110011011011)))
;; y should be Float32(0xCAA97CDB [Rational(-11107547, 2), -5553773.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA5D3B1E)))
;; z should be Float32(0xCA5D3B1E [Rational(-7249295, 2), -3624647.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b10010100 #b10111010011101100011110)))
(check-sat)
(exit)
