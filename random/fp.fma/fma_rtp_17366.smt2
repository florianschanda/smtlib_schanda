(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b11100100110110010110111)))
;; x should be Float32(0xCAF26CB7 [Rational(-15887543, 2), -7943771.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b11111010101110010010010)))
;; y should be Float32(0x4A7D5C92 [Rational(8302153, 2), 4151076.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11111111 #b10011000110101111111111)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b11111111 #b11111111111111111111111)))
(check-sat)
(exit)
