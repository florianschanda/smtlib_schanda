(assert (= z ((_ to_fp 8 24) #xCAD4CC3F)))
;; z should be Float32(0xCAD4CC3F [Rational(-13945919, 2), -6972959.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b1 #b10010101 #b10101001100110000111111))))
(check-sat)
(exit)
