(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC9A45FAC)))
;; y should be Float32(0xC9A45FAC [Rational(-2693099, 2), -1346549.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA574946)))
;; z should be Float32(0xCA574946 [Rational(-7054499, 2), -3527249.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #xCA574946)))
(check-sat)
(exit)
