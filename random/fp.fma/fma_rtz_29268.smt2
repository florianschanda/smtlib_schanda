(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00800000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b00011111010010101110111)))
;; y should be Float32(0x4A8FA577 [Rational(9414007, 2), 4707003.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01011101 #b10101100101111000011101)))
;; z should be Float32(0x2ED65E1D [Rational(14048797, 144115188075855872), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (fp #b0 #b01011101 #b10101100101111000011101))))
(check-sat)
(exit)
