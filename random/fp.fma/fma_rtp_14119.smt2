(assert (= z ((_ to_fp 8 24) #x49ACBB34)))
;; z should be Float32(0x49ACBB34 [Rational(2830029, 2), 1415014.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (_ +oo 8 24))))
