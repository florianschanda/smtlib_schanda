(assert (= z (fp #b1 #b10010010 #b11110010001100011111000)))
;; z should be Float32(0xC97918F8 [Rational(-2040607, 2), -1020303.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10101100 #b01010111110010110110100)))
(check-sat)
(exit)
