(assert (= x (fp #b1 #b10010101 #b10011100100000101000001)))
;; x should be Float32(0xCACE4141 [Rational(-13517121, 2), -6758560.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10101010101101100011101)))
;; y should be Float32(0xCAD55B1D [Rational(-13982493, 2), -6991246.500000])

