(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01111001 #b11101111011111000001111)))
;; x should be Float32(0xBCF7BE0F [Rational(-16236047, 536870912), -0.030242])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x007FFFFF)))
;; y should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA5D830E)))
;; z should be Float32(0xCA5D830E [Rational(-7258503, 2), -3629251.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA5D830F))))
(check-sat)
(exit)
