(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b11001010111110110110110)))
;; x should be Float32(0x4A657DB6 [Rational(7519963, 2), 3759981.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x1F851CE4)))
;; y should be Float32(0x1F851CE4 [Rational(2180921, 38685626227668133590597632), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b01010100 #b11011101010100001101100)))
(check-sat)
(exit)
