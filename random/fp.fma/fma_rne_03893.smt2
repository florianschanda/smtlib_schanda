(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b00110001100001011101010)))
;; x should be Float32(0xCA18C2EA [Rational(-5005685, 2), -2502842.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000001 #b00000000000000000000000)))
;; y should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x9E478DBD)))
;; z should be Float32(0x9E478DBD [Rational(-13077949, 1237940039285380274899124224), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
