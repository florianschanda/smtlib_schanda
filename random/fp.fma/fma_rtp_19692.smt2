(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01000000 #b00110111101101011111111)))
;; x should be Float32(0xA01BDAFF [Rational(-10214143, 77371252455336267181195264), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAD4D4BD)))
;; y should be Float32(0xCAD4D4BD [Rational(-13948093, 2), -6974046.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x672870E5)))
;; z should be Float32(0x672870E5 [Rational(795440105647390551179264), 795440105647390551179264.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #x672870E6))))
(check-sat)
(exit)
