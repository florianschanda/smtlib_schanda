(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01110111 #b11110111101011000011100)))
;; x should be Float32(0xBBFBD61C [Rational(-4126087, 536870912), -0.007685])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC9640F78)))
;; y should be Float32(0xC9640F78 [Rational(-1868271, 2), -934135.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xE5B14F54)))
;; z should be Float32(0xE5B14F54 [Rational(-104665276635956180418560), -104665276635956180418560.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xE5B14F53)))
(check-sat)
(exit)
