(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b01000000110001001100110)))
;; x should be Float32(0xCA206266 [Rational(-5255475, 2), -2627737.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00111010010100110001111)))
;; y should be Float32(0x001D298F [Rational(1911183, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x807FFFFF)))
;; z should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b1 #b00010100 #b00100100010100110000111)))
(check-sat)
(exit)
