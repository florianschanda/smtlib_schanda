(assert (= y ((_ to_fp 8 24) #x00013664)))
;; y should be Float32(0x00013664 [Rational(19865, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000001)))
