(assert (= y ((_ to_fp 8 24) #xCAF8442D)))
;; y should be Float32(0xCAF8442D [Rational(-16270381, 2), -8135190.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10101010 #b11000110010000011011111)))
;; z should be Float32(0xD56320DF [Rational(-15608144986112), -15608144986112.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b10101010 #b11000110010000011011111))))
(check-sat)
(exit)
