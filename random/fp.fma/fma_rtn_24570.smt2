(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b01111000101110010110110)))
;; y should be Float32(0x4A3C5CB6 [Rational(6172251, 2), 3086125.500000])

