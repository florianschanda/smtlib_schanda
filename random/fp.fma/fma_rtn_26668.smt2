(assert (= x ((_ to_fp 8 24) #xBC72CD55)))
;; x should be Float32(0xBC72CD55 [Rational(-15912277, 1073741824), -0.014819])

(declare-const y Float32)
(assert (= y (fp #b1 #b01001010 #b00010111100000100001100)))
;; y should be Float32(0xA50BC10C [Rational(-2289731, 18889465931478580854784), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b01110100000011111100001)))
;; z should be Float32(0xCABA07E1 [Rational(-12191713, 2), -6095856.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10010101 #b01110100000011111100001)))
(check-sat)
(exit)
