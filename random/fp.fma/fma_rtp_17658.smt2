(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10100111010101110001111)))
;; x should be Float32(0xCAD3AB8F [Rational(-13872015, 2), -6936007.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b11111001001110101111101)))
;; y should be Float32(0x807C9D7D [Rational(-8166781, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000001)))
;; z should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b00010111 #b10011100001001010100010)))
(check-sat)
(exit)
