(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x501004FB)))
;; y should be Float32(0x501004FB [Rational(9664982016), 9664982016.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x805FBA00)))
;; z should be Float32(0x805FBA00 [Rational(-12253, 1393796574908163946345982392040522594123776), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result ((_ to_fp 8 24) #x111004FA)))
(check-sat)
(exit)
