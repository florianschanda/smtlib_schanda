(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010100 #b00000001110101010101110)))
;; y should be Float32(0xCA00EAAE [Rational(-4224343, 2), -2112171.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b11100111101100111100011)))
;; z should be Float32(0x0073D9E3 [Rational(7592419, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x0073D9E3)))
(check-sat)
(exit)
