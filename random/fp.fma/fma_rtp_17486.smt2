(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010011 #b10110001010011110000100)))
;; x should be Float32(0xC9D8A784 [Rational(-3549665, 2), -1774832.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x002ED20C)))
;; y should be Float32(0x002ED20C [Rational(767107, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00800000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b00010100 #b00111100111111101100101))))
(check-sat)
(exit)
