(assert (= z ((_ to_fp 8 24) #x80739D53)))
;; z should be Float32(0x80739D53 [Rational(-7576915, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x80739D53)))
(check-sat)
(exit)
