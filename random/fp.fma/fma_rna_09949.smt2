(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b01111111110101101111110)))
;; x should be Float32(0x003FEB7E [Rational(2094527, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC9E59B0C)))
;; y should be Float32(0xC9E59B0C [Rational(-3761859, 2), -1880929.500000])

(declare-const z Float32)
(assert (= z (_ -oo 8 24)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
