(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01010000 #b10101001011001100100000)))
;; x should be Float32(0x2854B320 [Rational(435609, 36893488147419103232), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b11100110000000010001111)))
;; y should be Float32(0xCAF3008F [Rational(-15925391, 2), -7962695.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000001)))
;; z should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b01100111 #b10010011110011001111110)))
(check-sat)
(exit)
