(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b10100000101001111111011)))
;; y should be Float32(0x4AD053FB [Rational(13652987, 2), 6826493.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b01101101 #b00101010001010000100010)))
;; z should be Float32(0xB6951422 [Rational(-4885009, 1099511627776), -0.000004])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
