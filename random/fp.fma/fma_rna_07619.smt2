(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b00001000010110100111010)))
;; y should be Float32(0x4A042D3A [Rational(4331165, 2), 2165582.500000])

