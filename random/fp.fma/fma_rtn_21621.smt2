(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7F800000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b00101101 #b00101111100001110010100)))
;; y should be Float32(0x9697C394 [Rational(-2486501, 10141204801825835211973625643008), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b10100000001111001010101)))
;; z should be Float32(0x80501E55 [Rational(-5250645, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
