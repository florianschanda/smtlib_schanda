(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x6D4FAAFE)))
;; x should be Float32(0x6D4FAAFE [Rational(4016882118964972817225875456), 4016882118964972817225875456.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b00101100 #b00100000101110000000010)))
;; z should be Float32(0x96105C02 [Rational(-4730369, 40564819207303340847894502572032), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b00101100 #b00100000101110000000010)))
(check-sat)
(exit)
