(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b01011110 #b10110001111010110101101)))
;; y should be Float32(0xAF58F5AD [Rational(-14218669, 72057594037927936), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A87F75D)))
;; z should be Float32(0x4A87F75D [Rational(8910685, 2), 4455342.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x4A87F75D)))
(check-sat)
(exit)
