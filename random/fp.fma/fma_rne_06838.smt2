(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b11110100000100010111111)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b10110111001111110100000)))
;; y should be Float32(0x805B9FA0 [Rational(-187645, 22300745198530623141535718272648361505980416), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xECEE16E4)))
;; z should be Float32(0xECEE16E4 [Rational(-2302659543908429452420317184), -2302659543908429452420317184.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
