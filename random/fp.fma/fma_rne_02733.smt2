(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11001101 #b00111011010010001111111)))
;; x should be Float32(0x669DA47F [Rational(372222977576532740931584), 372222977576532740931584.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAF78497)))
;; y should be Float32(0xCAF78497 [Rational(-16221335, 2), -8110667.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000001)))
;; z should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b11100100 #b00110000110101101011100)))
(check-sat)
(exit)
