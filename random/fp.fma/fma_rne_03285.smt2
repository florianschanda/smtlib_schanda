(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b01001101111001001101110)))
;; y should be Float32(0x4A26F26E [Rational(5470519, 2), 2735259.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00010011 #b11111000001110010000100)))
;; z should be Float32(0x89FC1C84 [Rational(-4130593, 680564733841876926926749214863536422912), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result ((_ to_fp 8 24) #x89FC1C84)))
(check-sat)
(exit)
