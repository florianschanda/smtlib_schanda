(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11100101010010100101100)))
;; x should be Float32(0x0072A52C [Rational(1878347, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x84E07F4F)))
;; y should be Float32(0x84E07F4F [Rational(-14712655, 2787593149816327892691964784081045188247552), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000000)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result ((_ to_fp 8 24) #x80000000))))
(check-sat)
(exit)
