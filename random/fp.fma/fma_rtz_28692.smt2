(assert (= z ((_ to_fp 8 24) #x4AEF0E3B)))
;; z should be Float32(0x4AEF0E3B [Rational(15666747, 2), 7833373.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (fp #b0 #b10010101 #b11011110000111000111011))))
(check-sat)
(exit)
