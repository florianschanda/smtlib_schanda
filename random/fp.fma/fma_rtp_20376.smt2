(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xFF98D6BD)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b10100110110101110010000)))
;; y should be Float32(0x00536B90 [Rational(341689, 44601490397061246283071436545296723011960832), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01001111 #b01011110110011010011011)))
;; z should be Float32(0x27AF669B [Rational(11495067, 2361183241434822606848), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
