(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000001 #b00000000000000000000000)))
;; x should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b10011101000011111011110)))
;; y should be Float32(0x4A4E87DE [Rational(6767599, 2), 3383799.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A86B9FD)))
;; z should be Float32(0x4A86B9FD [Rational(8829437, 2), 4414718.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #x4A86B9FD))))
(check-sat)
(exit)
