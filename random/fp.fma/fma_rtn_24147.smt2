(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10011110 #b00010111100101001111001)))
;; y should be Float32(0xCF0BCA79 [Rational(-2345302272), -2345302272.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xEAF73B8E)))
;; z should be Float32(0xEAF73B8E [Rational(-149442958252480590988181504), -149442958252480590988181504.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xEAF73B8E)))
(check-sat)
(exit)
