(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01101011 #b01101100110111100000010)))
;; y should be Float32(0xB5B66F02 [Rational(-5977985, 4398046511104), -0.000001])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x2E9E61C7)))
;; z should be Float32(0x2E9E61C7 [Rational(10379719, 144115188075855872), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x2E9E61C6)))
(check-sat)
(exit)
