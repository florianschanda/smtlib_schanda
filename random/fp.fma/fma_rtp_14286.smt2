(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b11101000111001000001001)))
;; x should be Float32(0x4AF47209 [Rational(16019977, 2), 8009988.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010011 #b10100000111101010100100)))
;; y should be Float32(0xC9D07AA4 [Rational(-3415721, 2), -1707860.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xAAAE081E)))
;; z should be Float32(0xAAAE081E [Rational(-5702671, 18446744073709551616), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b10101010 #b10001110001000111000010)))
(check-sat)
(exit)
