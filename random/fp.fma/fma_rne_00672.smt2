(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A88E22F)))
;; x should be Float32(0x4A88E22F [Rational(8970799, 2), 4485399.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b01010100 #b01000010010110111110000)))
;; y should be Float32(0xAA212DF0 [Rational(-660191, 4611686018427387904), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000001)))
;; z should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b01101010 #b01011000101110110011111)))
(check-sat)
(exit)
