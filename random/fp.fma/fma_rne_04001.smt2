(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b10110111111111110101101)))
;; y should be Float32(0x4ADBFFAD [Rational(14417837, 2), 7208918.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b01001100100100000001011)))
;; z should be Float32(0xCAA6480B [Rational(-10897419, 2), -5448709.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
