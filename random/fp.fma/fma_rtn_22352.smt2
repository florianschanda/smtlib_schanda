(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b01110100101100010010000)))
;; y should be Float32(0x803A5890 [Rational(-238985, 44601490397061246283071436545296723011960832), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x256E9ECA)))
;; z should be Float32(0x256E9ECA [Rational(7819109, 37778931862957161709568), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x256E9EC9)))
(check-sat)
(exit)
