(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10011010 #b00001001001000100001101)))
;; x should be Float32(0xCD04910D [Rational(-139006160), -139006160.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00111101 #b01111111101101010100110)))
;; y should be Float32(0x1EBFDAA6 [Rational(6286675, 309485009821345068724781056), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #xAC46B2E4)))
(check-sat)
(exit)
