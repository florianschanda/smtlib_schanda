(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b01000111100101011110110)))
;; x should be Float32(0x8023CAF6 [Rational(-1172859, 356811923176489970264571492362373784095686656), -0.000000])

