(assert (= y (fp #b0 #b10010101 #b01001111001011100110001)))
;; y should be Float32(0x4AA79731 [Rational(10983217, 2), 5491608.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10100001 #b11101000010010010011101)))
