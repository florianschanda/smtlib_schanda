(assert (= z (fp #b0 #b10010101 #b01111111111111111100011)))
;; z should be Float32(0x4ABFFFE3 [Rational(12582883, 2), 6291441.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
