(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b01100001010011110100000)))
;; x should be Float32(0x0030A7A0 [Rational(99645, 22300745198530623141535718272648361505980416), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01010100 #b01010001011110011010010)))
;; y should be Float32(0x2A28BCD2 [Rational(5529193, 36893488147419103232), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (_ +oo 8 24)))
(check-sat)
(exit)
