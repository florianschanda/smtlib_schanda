(assert (= y ((_ to_fp 8 24) #xC85D891E)))
;; y should be Float32(0xC85D891E [Rational(-7259279, 32), -226852.468750])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b11101101000011111100010)))
;; z should be Float32(0x007687E2 [Rational(3884017, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x53A0E06B)))
(check-sat)
(exit)
