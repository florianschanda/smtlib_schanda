(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b00000011001010100010010)))
;; x should be Float32(0x4A019512 [Rational(4246153, 2), 2123076.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x3A93D467)))
;; y should be Float32(0x3A93D467 [Rational(9688167, 8589934592), 0.001128])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000001 #b00000000000000000000000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b10001010 #b00101011010100000111010)))
(check-sat)
(exit)
