(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01001000 #b10101100100010011100001)))
;; x should be Float32(0x245644E1 [Rational(14042337, 302231454903657293676544), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00001101 #b10101110111110110101101)))
;; y should be Float32(0x06D77DAD [Rational(14122413, 174224571863520493293247799005065324265472), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF800000)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (_ -oo 8 24)))
(check-sat)
(exit)
