(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b00000000000000000000000)))
;; x should be Float32(-oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b10000001101001001000000)))
;; y should be Float32(0x8040D240 [Rational(-66377, 11150372599265311570767859136324180752990208), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xF95E0019)))
;; z should be Float32(0xF95E0019 [Rational(-72043242706174661883888126480351232), -72043242706174661883888126480351232.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #x7F800000))))
(check-sat)
(exit)
