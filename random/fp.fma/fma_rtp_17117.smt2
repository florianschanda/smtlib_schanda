(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x07A08E89)))
;; y should be Float32(0x07A08E89 [Rational(10522249, 43556142965880123323311949751266331066368), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b01010110 #b00000010110011011000010)))
;; z should be Float32(0xAB0166C2 [Rational(-4240225, 9223372036854775808), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b01010110 #b00000010110011011000010)))
(check-sat)
(exit)
