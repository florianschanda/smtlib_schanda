(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x40962BD3)))
;; x should be Float32(0x40962BD3 [Rational(9841619, 2097152), 4.692850])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x80000000)))
;; y should be Float32(-zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b01101010000011000011110)))
;; z should be Float32(0xCA35061E [Rational(-5931791, 2), -2965895.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b1 #b10010100 #b01101010000011000011110))))
(check-sat)
(exit)
