(assert (= y ((_ to_fp 8 24) #xCA9A9041)))
;; y should be Float32(0xCA9A9041 [Rational(-10129473, 2), -5064736.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b00111000010001010111011)))
