(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10001101110111011111111)))
;; x should be Float32(0xCAC6EEFF [Rational(-13037311, 2), -6518655.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xC99A5124)))
;; y should be Float32(0xC99A5124 [Rational(-2528329, 2), -1264164.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01111011 #b00000111111100011001101)))
;; z should be Float32(0x3D83F8CD [Rational(8648909, 134217728), 0.064439])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b0 #b10101001 #b11011111101010110100101)))
(check-sat)
(exit)
