(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00800000)))
;; x should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b01110101100100011100101)))
;; y should be Float32(0xCABAC8E5 [Rational(-12241125, 2), -6120562.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x802E24A0)))
;; z should be Float32(0x802E24A0 [Rational(-94501, 22300745198530623141535718272648361505980416), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x8BBAC8E6)))
(check-sat)
(exit)
