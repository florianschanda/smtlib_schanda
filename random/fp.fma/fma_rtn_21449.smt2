(set-info :status unsat)
(declare-const x Float32)
(assert (= x (_ +oo 8 24)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b01111000 #b10110000101111100001110)))
;; y should be Float32(0x3C585F0E [Rational(7090055, 536870912), 0.013206])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xB2BB547A)))
;; z should be Float32(0xB2BB547A [Rational(-6138429, 281474976710656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b0 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
