(assert (= y ((_ to_fp 8 24) #xAB203BDE)))
;; y should be Float32(0xAB203BDE [Rational(-5250543, 9223372036854775808), -0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11100000 #b01101010000111111101000)))
;; z should be Float32(0x70350FE8 [Rational(224144065015926810537982164992), 224144065015926810537982164992.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b11100000 #b01101010000111111100111)))
(check-sat)
(exit)
