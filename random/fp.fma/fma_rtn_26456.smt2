(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xC726CF13)))
;; x should be Float32(0xC726CF13 [Rational(-10931987, 256), -42703.074219])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00800000)))
;; y should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11110110 #b11111001100100011010100)))
;; z should be Float32(0x7B7CC8D4 [Rational(1312532086641959920514044356538138624), 1312532086641959920514044356538138624.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b11110110 #b11111001100100011010011)))
(check-sat)
(exit)
