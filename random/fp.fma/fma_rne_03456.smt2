(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b01110101100100101101001)))
;; y should be Float32(0xCABAC969 [Rational(-12241257, 2), -6120628.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xBD244933)))
;; z should be Float32(0xBD244933 [Rational(-10766643, 268435456), -0.040109])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b01111010 #b01001000100100100110011)))
(check-sat)
(exit)
