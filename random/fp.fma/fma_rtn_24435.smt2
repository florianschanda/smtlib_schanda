(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b00110010101011101110110)))
;; x should be Float32(0xCA195776 [Rational(-5024699, 2), -2512349.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b00000000 #b11111111111111111111111)))
;; y should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const z Float32)
(assert (= z (_ +zero 8 24)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b00010110 #b00110010101011101110100)))
(check-sat)
(exit)
