(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xFAAF9192)))
;; y should be Float32(0xFAAF9192 [Rational(-455802233473925704898798933233369088), -455802233473925704898798933233369088.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010010 #b01000101010100101101000)))
;; z should be Float32(0x4922A968 [Rational(1332525, 2), 666262.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #x4922A968))))
(check-sat)
(exit)
