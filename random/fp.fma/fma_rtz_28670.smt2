(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x7F7FFFFF)))
;; x should be Float32(0x7F7FFFFF [Rational(340282346638528859811704183484516925440), 340282346638528859811704183484516925440.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01001000 #b10000011010110011110100)))
;; y should be Float32(0x2441ACF4 [Rational(3173181, 75557863725914323419136), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x8058D65C)))
;; z should be Float32(0x8058D65C [Rational(-1455511, 178405961588244985132285746181186892047843328), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (= result (fp #b0 #b11001000 #b10000011010110011110011)))
(check-sat)
(exit)
