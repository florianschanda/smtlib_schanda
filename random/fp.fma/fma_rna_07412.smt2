(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b01011010001111000001110)))
;; x should be Float32(0x4A2D1E0E [Rational(5672711, 2), 2836355.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCAE651F5)))
;; y should be Float32(0xCAE651F5 [Rational(-15094261, 2), -7547130.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x49A7BBBC)))
;; z should be Float32(0x49A7BBBC [Rational(2748143, 2), 1374071.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b10101011 #b00110111100000001101100)))
(check-sat)
(exit)
