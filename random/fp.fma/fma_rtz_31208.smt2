(assert (= y (fp #b0 #b00000000 #b10101101010110010100001)))
;; y should be Float32(0x0056ACA1 [Rational(5680289, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b00000000000000000000000)))
;; z should be Float32(-zero)

