(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10110010000000100000001)))
;; x should be Float32(0xCAD90101 [Rational(-14221569, 2), -7110784.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x007FFFFF)))
;; y should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (_ -zero 8 24)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b00010111 #b10110010000000011111111))))
(check-sat)
(exit)
