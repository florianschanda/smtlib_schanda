(assert (= z (fp #b0 #b00000000 #b11110111010110111101101)))
;; z should be Float32(0x007BADED [Rational(8105453, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
