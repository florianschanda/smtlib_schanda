(assert (= y (fp #b0 #b00000000 #b00111011001010000010100)))
;; y should be Float32(0x001D9414 [Rational(484613, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80800000)))
;; z should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b00010100 #b01000111011111000100110)))
(check-sat)
(exit)
