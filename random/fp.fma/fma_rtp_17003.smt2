(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4AA34FD7)))
;; y should be Float32(0x4AA34FD7 [Rational(10702807, 2), 5351403.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b01001001 #b00111010100011011001110)))
;; z should be Float32(0xA49D46CE [Rational(-5153639, 75557863725914323419136), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xA49D46CE))))
(check-sat)
(exit)
