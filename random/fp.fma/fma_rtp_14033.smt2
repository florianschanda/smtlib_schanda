(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b11101110 #b01000000100001001100000)))
;; y should be Float32(0xF7204260 [Rational(-3250444305871151563239331685466112), -3250444305871151563239331685466112.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA8501AB)))
;; z should be Float32(0xCA8501AB [Rational(-8716715, 2), -4358357.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA8501AB))))
(check-sat)
(exit)
