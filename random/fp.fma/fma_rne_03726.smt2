(assert (= y (fp #b0 #b00000000 #b00000000000000000000001)))
;; y should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b10011110010000100001111)))
;; z should be Float32(0x4ACF210F [Rational(13574415, 2), 6787207.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b10010101 #b10011110010000100001111)))
(check-sat)
(exit)
