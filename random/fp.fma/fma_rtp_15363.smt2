(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x007FFFFF)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b10010101110111010000011)))
;; y should be Float32(0xCACAEE83 [Rational(-13299331, 2), -6649665.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA142CCE)))
;; z should be Float32(0xCA142CCE [Rational(-4855399, 2), -2427699.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b1 #b10010100 #b00101000010110011001110))))
(check-sat)
(exit)
