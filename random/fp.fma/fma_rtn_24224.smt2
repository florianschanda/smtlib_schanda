(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10000100010001000101011)))
;; x should be Float32(0xCAC2222B [Rational(-12722731, 2), -6361365.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x48EF1570)))
;; y should be Float32(0x48EF1570 [Rational(979287, 2), 489643.500000])

(declare-const z Float32)
(assert (= z (fp #b1 #b00000000 #b10010101111110101000100)))
;; z should be Float32(0x804AFD44 [Rational(-1228625, 178405961588244985132285746181186892047843328), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10101000 #b01101010100111000101000)))
(check-sat)
(exit)
