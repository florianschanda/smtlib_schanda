(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010100 #b11100000111000101111110)))
;; x should be Float32(0xCA70717E [Rational(-7878847, 2), -3939423.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x00800000)))
;; y should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b10010101 #b11101000011000001010001)))
;; z should be Float32(0x4AF43051 [Rational(16003153, 2), 8001576.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (not (= result (fp #b0 #b10010101 #b11101000011000001010001))))
(check-sat)
(exit)
