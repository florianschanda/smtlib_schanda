(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10101010 #b01011111010111110111101)))
;; x should be Float32(0x552FAFBD [Rational(12073082814464), 12073082814464.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b00100110001000100100111)))
;; y should be Float32(0x4A931127 [Rational(9638183, 2), 4819091.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b0 #b11000000 #b10010011101101101011110)))
(check-sat)
(exit)
