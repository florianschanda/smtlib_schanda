(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010001 #b11010000100000111010000)))
;; x should be Float32(0x48E841D0 [Rational(951325, 2), 475662.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b10011001110110010010111)))
;; y should be Float32(0x4ACCEC97 [Rational(13429911, 2), 6714955.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF800000)))
;; z should be Float32(-oo)

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (_ -oo 8 24))))
(check-sat)
(exit)
