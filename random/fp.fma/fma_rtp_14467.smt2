(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ +oo 8 24)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010100 #b10001011000100100011010)))
;; y should be Float32(0x4A45891A [Rational(6472845, 2), 3236422.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x1CB5992D)))
;; z should be Float32(0x1CB5992D [Rational(11901229, 9903520314283042199192993792), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
