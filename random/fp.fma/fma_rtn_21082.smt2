(assert (= z ((_ to_fp 8 24) #xC974FD68)))
;; z should be Float32(0xC974FD68 [Rational(-2006957, 2), -1003478.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b10011010 #b01001001010001011110101)))
(check-sat)
(exit)
