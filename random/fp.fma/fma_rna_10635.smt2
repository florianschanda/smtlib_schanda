(assert (= y ((_ to_fp 8 24) #x003EF051)))
;; y should be Float32(0x003EF051 [Rational(4124753, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x807FFFFF)))
