(assert (= z ((_ to_fp 8 24) #x800452A2)))
;; z should be Float32(0x800452A2 [Rational(-141649, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result ((_ to_fp 8 24) #x800452A2))))
(check-sat)
(exit)
