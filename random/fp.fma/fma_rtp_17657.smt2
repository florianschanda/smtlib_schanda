(assert (= y (fp #b1 #b00000000 #b11111110111000001111010)))
;; y should be Float32(0x807F707A [Rational(-4175933, 356811923176489970264571492362373784095686656), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00800000)))
;; z should be Float32(0x00800000 [Rational(1, 85070591730234615865843651857942052864), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b00010110 #b10001111111011111110110)))
(check-sat)
(exit)
