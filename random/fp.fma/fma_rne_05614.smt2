(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x80000001)))
;; x should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCACBFC47)))
;; y should be Float32(0xCACBFC47 [Rational(-13368391, 2), -6684195.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b10000100101001001000100)))
;; z should be Float32(0x00425244 [Rational(1086609, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b0 #b00000001 #b01010000101000001101000))))
(check-sat)
(exit)
