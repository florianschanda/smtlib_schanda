(assert (= y ((_ to_fp 8 24) #x61DB3B7D)))
;; y should be Float32(0x61DB3B7D [Rational(505515441820339798016), 505515441820339798016.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xFF800000)))
;; z should be Float32(-oo)

