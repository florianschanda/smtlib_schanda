(assert (= z (fp #b1 #b01101101 #b11011000100100010000010)))
;; z should be Float32(0xB6EC4882 [Rational(-7742529, 1099511627776), -0.000007])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (not (= result (fp #b1 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
