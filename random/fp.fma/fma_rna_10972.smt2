(assert (= y (fp #b0 #b10001110 #b00111100001011001101000)))
;; y should be Float32(0x471E1668 [Rational(1295053, 32), 40470.406250])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b11001111010111111101001)))
;; z should be Float32(0x0067AFE9 [Rational(6795241, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
