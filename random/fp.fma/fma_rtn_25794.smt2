(declare-const z Float32)
(assert (= z (fp #b1 #b10010011 #b10101111001010111000100)))
;; z should be Float32(0xC9D795C4 [Rational(-3532145, 2), -1766072.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10010011 #b10101111001010111000101)))
(check-sat)
(exit)
