(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000001)))
;; x should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010010 #b11000011111001000111000)))
;; y should be Float32(0x4961F238 [Rational(1850951, 2), 925475.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4ADCCECB)))
;; z should be Float32(0x4ADCCECB [Rational(14470859, 2), 7235429.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b0 #b10010101 #b10111001100111011001010)))
(check-sat)
(exit)
