(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ -zero 8 24)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xE22454A9)))
;; y should be Float32(0xE22454A9 [Rational(-757841608814654128128), -757841608814654128128.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b01010000 #b00111111110101010011010)))
;; z should be Float32(0x281FEA9A [Rational(5240141, 590295810358705651712), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b01010000 #b00111111110101010011010)))
(check-sat)
(exit)
