(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x00000000)))
;; x should be Float32(+zero)

(declare-const y Float32)
(assert (= y (fp #b1 #b01010011 #b01010001000110101111110)))
;; y should be Float32(0xA9A88D7E [Rational(-5523135, 73786976294838206464), -0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x1008FD41)))
;; z should be Float32(0x1008FD41 [Rational(8977729, 332306998946228968225951765070086144), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result ((_ to_fp 8 24) #x1008FD41))))
(check-sat)
(exit)
