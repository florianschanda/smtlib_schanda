(assert (= z (fp #b1 #b00000000 #b10100011000001011010001)))
;; z should be Float32(0x805182D1 [Rational(-5341905, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
