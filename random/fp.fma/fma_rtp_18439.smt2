(assert (= x ((_ to_fp 8 24) #x807FFFFF)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b00100111011111101011011)))
;; y should be Float32(0x4A93BF5B [Rational(9682779, 2), 4841389.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x0069B8B2)))
;; z should be Float32(0x0069B8B2 [Rational(3464281, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b1 #b00010111 #b00100111011111101011000)))
(check-sat)
(exit)
