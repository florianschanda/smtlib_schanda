(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A85EA9D)))
;; x should be Float32(0x4A85EA9D [Rational(8776349, 2), 4388174.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b01101110 #b01010100000101000110110)))
;; y should be Float32(0x372A0A36 [Rational(5571867, 549755813888), 0.000010])

(declare-const z Float32)
(assert (= z (fp #b1 #b11111111 #b11010101101111100010111)))
;; z should be Float32(NaN)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (_ NaN 8 24)))
(check-sat)
(exit)
