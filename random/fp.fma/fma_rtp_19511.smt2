(assert (= z ((_ to_fp 8 24) #xB9F62F97)))
;; z should be Float32(0xB9F62F97 [Rational(-16134039, 34359738368), -0.000470])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
