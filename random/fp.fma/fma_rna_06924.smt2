(assert (= y ((_ to_fp 8 24) #x7F7FFFFF)))
;; y should be Float32(0x7F7FFFFF [Rational(340282346638528859811704183484516925440), 340282346638528859811704183484516925440.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b11011000 #b10110001111000100111000)))
;; z should be Float32(0x6C58F138 [Rational(1049068401507198455871700992), 1049068401507198455871700992.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b0 #b11011000 #b10110001111000100111000))))
(check-sat)
(exit)
