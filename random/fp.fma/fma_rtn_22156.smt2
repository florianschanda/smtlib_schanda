(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x007FFFFF)))
;; x should be Float32(0x007FFFFF [Rational(8388607, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b11111011 #b01110010001110110010100)))
;; y should be Float32(0x7DB91D94 [Rational(30757594703216035866956804342325182464), 30757594703216035866956804342325182464.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x4A7B8A56)))
;; z should be Float32(0x4A7B8A56 [Rational(8242475, 2), 4121237.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #x4A7B8A57)))
(check-sat)
(exit)
