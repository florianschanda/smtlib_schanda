(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b10010000011101000100010)))
;; x should be Float32(0x4A483A22 [Rational(6561041, 2), 3280520.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b11111111 #b00101000010100100110101)))
;; y should be Float32(NaN)

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7BEA0B8C)))
;; z should be Float32(0x7BEA0B8C [Rational(2430463326691083660916125313909391360), 2430463326691083660916125313909391360.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (_ NaN 8 24)))
(check-sat)
(exit)
