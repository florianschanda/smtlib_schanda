(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA1E2CF2)))
;; z should be Float32(0xCA1E2CF2 [Rational(-5183097, 2), -2591548.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b10010100 #b00111100010110011110010)))
(check-sat)
(exit)
