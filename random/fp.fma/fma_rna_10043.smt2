(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b00000000 #b01110001100011100110111)))
;; x should be Float32(0x0038C737 [Rational(3721015, 713623846352979940529142984724747568191373312), 0.000000])

