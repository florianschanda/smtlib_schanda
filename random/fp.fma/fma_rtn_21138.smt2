(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010001 #b10011010101111101110000)))
;; x should be Float32(0x48CD5F70 [Rational(841207, 2), 420603.500000])

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b01100000000011010100101)))
;; y should be Float32(0xCAB006A5 [Rational(-11536037, 2), -5768018.500000])

(declare-const z Float32)
(assert (= z (_ -zero 8 24)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result (fp #b1 #b10101000 #b00011010011011011110010)))
(check-sat)
(exit)
