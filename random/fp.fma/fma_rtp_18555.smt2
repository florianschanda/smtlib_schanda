(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b11111111111111111111111)))
;; x should be Float32(0x807FFFFF [Rational(-8388607, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x1981F5A8)))
;; y should be Float32(0x1981F5A8 [Rational(1064629, 79228162514264337593543950336), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b1 #b10010101 #b11100111001101110000101)))
;; z should be Float32(0xCAF39B85 [Rational(-15965061, 2), -7982530.500000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xCAF39B85)))
(check-sat)
(exit)
