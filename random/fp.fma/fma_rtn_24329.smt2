(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b01000001010000111001101)))
;; x should be Float32(0xCAA0A1CD [Rational(-10527181, 2), -5263590.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x7AF50157)))
;; y should be Float32(0x7AF50157 [Rational(636069952800387580828883093116944384), 636069952800387580828883093116944384.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00727B94)))
;; z should be Float32(0x00727B94 [Rational(1875685, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
(assert (= result ((_ to_fp 8 24) #xFF800000)))
(check-sat)
(exit)
