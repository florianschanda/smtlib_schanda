;; z should be Float32(0x00641753 [Rational(6559571, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (_ -oo 8 24)))
(check-sat)
(exit)
