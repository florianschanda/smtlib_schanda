(declare-const z Float32)
(assert (= z (fp #b0 #b11000100 #b10101001111111001001000)))
;; z should be Float32(0x6254FE48 [Rational(982258159677595451392), 982258159677595451392.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b11000100 #b10101001111111001001000)))
(check-sat)
(exit)
