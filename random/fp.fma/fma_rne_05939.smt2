(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01001100 #b01001111101010011010001)))
;; x should be Float32(0xA627D4D1 [Rational(-10998993, 18889465931478580854784), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b11100111110010101001001)))
;; y should be Float32(0x0073E549 [Rational(7595337, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #xCA07C142)))
;; z should be Float32(0xCA07C142 [Rational(-4448417, 2), -2224208.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (= result (fp #b1 #b10010100 #b00001111100000101000010)))
(check-sat)
(exit)
