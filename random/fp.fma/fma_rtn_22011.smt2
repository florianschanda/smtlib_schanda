(assert (= z (fp #b0 #b00000000 #b10000001100011000111100)))
;; z should be Float32(0x0040C63C [Rational(1061263, 178405961588244985132285746181186892047843328), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTN x y z)))
