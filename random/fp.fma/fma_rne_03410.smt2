(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b00000000 #b00000000000000000000000)))
;; x should be Float32(-zero)

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b11010100111101110100000)))
;; y should be Float32(0x006A7BA0 [Rational(218077, 22300745198530623141535718272648361505980416), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x001B26D1)))
;; z should be Float32(0x001B26D1 [Rational(1779409, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b0 #b00000000 #b00110110010011011010001))))
(check-sat)
(exit)
