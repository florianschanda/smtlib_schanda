(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (_ +oo 8 24)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b0 #b10010011 #b10110000011101101100100)))
;; y should be Float32(0x49D83B64 [Rational(3542745, 2), 1771372.500000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b11011001101011010101010)))
;; z should be Float32(0x006CD6AA [Rational(3566421, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #x7F800000)))
(check-sat)
(exit)
