;; z should be Float32(0xCA42E362 [Rational(-6386097, 2), -3193048.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b1 #b10101001 #b10000100100000001110100)))
(check-sat)
