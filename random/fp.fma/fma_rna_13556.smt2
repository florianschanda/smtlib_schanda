(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b11111111 #b01000100100101011011100)))
;; x should be Float32(NaN)

(declare-const y Float32)
(assert (= y (fp #b1 #b10010101 #b00111111000100000001111)))
;; y should be Float32(0xCA9F880F [Rational(-10455055, 2), -5227527.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x004BEF9A)))
;; z should be Float32(0x004BEF9A [Rational(2488269, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #xFFFFFFFF)))
(check-sat)
(exit)
