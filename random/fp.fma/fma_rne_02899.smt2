(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x0029BBF5)))
;; x should be Float32(0x0029BBF5 [Rational(2735093, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00000000000000000000000)))
;; y should be Float32(+zero)

(declare-const z Float32)
(assert (= z (fp #b1 #b10010100 #b01000111111110100101110)))
;; z should be Float32(0xCA23FD2E [Rational(-5373591, 2), -2686795.500000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #xCA23FD2E))))
(check-sat)
(exit)
