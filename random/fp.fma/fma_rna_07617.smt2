(assert (= z (fp #b1 #b11110100 #b00100000100010011101100)))
;; z should be Float32(0xFA1044EC [Rational(-187272162332104214620222990216855552), -187272162332104214620222990216855552.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result (fp #b0 #b11111111 #b00000000000000000000000)))
(check-sat)
(exit)
