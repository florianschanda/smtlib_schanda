(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b01111111101011111111111)))
;; x should be Float32(0xCABFD7FF [Rational(-12572671, 2), -6286335.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b01110011001000001011110)))
;; y should be Float32(0x0039905E [Rational(1886255, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x00000001)))
;; z should be Float32(0x00000001 [Rational(1, 713623846352979940529142984724747568191373312), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result ((_ to_fp 8 24) #x8B2C8D1F))))
(check-sat)
(exit)
