(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010101 #b10011100110001001001101)))
;; x should be Float32(0x4ACE624D [Rational(13525581, 2), 6762790.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #xCACF7449)))
;; y should be Float32(0xCACF7449 [Rational(-13595721, 2), -6797860.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80000001)))
;; z should be Float32(0x80000001 [Rational(-1, 713623846352979940529142984724747568191373312), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b10101100 #b01001110011111100111100))))
(check-sat)
(exit)
