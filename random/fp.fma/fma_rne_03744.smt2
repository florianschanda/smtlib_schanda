(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #xC7404280)))
;; x should be Float32(0xC7404280 [Rational(-98437, 2), -49218.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00101101 #b10001001101011100000011)))
;; y should be Float32(0x16C4D703 [Rational(12900099, 40564819207303340847894502572032), 0.000000])

(declare-const z Float32)
(assert (= z (fp #b0 #b00000000 #b00000000000000000000000)))
;; z should be Float32(+zero)

(declare-const result Float32)
(assert (= result (fp.fma RNE x y z)))
(assert (not (= result (fp #b1 #b00111101 #b00100111101010001100100))))
(check-sat)
(exit)
