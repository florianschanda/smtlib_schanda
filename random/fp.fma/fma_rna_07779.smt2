(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b11111111 #b00000000000000000000000)))
;; x should be Float32(+oo)

(declare-const y Float32)
(assert (= y (fp #b1 #b10001111 #b10100001111110101000000)))
;; y should be Float32(0xC7D0FD40 [Rational(-214005, 2), -107002.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x30990A8F)))
;; z should be Float32(0x30990A8F [Rational(10029711, 9007199254740992), 0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (= result ((_ to_fp 8 24) #xFF800000)))
(check-sat)
(exit)
