(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x ((_ to_fp 8 24) #x4A0EB54A)))
;; x should be Float32(0x4A0EB54A [Rational(4676261, 2), 2338130.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010101 #b10000111100100010110111)))
;; y should be Float32(0x4AC3C8B7 [Rational(12830903, 2), 6415451.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x80800000)))
;; z should be Float32(0x80800000 [Rational(-1, 85070591730234615865843651857942052864), -0.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result (fp #b0 #b10101010 #b10110100100011111110111)))
(check-sat)
(exit)
