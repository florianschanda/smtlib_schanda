(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b0 #b10010100 #b10110111111011001010110)))
;; x should be Float32(0x4A5BF656 [Rational(7207723, 2), 3603861.500000])

(declare-const y Float32)
(assert (= y (fp #b0 #b00000000 #b00110111010101110001010)))
;; y should be Float32(0x001BAB8A [Rational(906693, 356811923176489970264571492362373784095686656), 0.000000])

(declare-const z Float32)
(assert (= z (_ -zero 8 24)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #x0A3E32FA)))
(check-sat)
(exit)
