(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-option :produce-models true)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status sat)
(declare-const x Float32)
(assert (= x (fp #b1 #b01010100 #b00010101000000110000100)))
;; x should be Float32(0xAA0A8184 [Rational(-2269281, 18446744073709551616), -0.000000])

(declare-const y Float32)
(assert (= y (fp #b0 #b10010011 #b01011101001100001100100)))
;; y should be Float32(0x49AE9864 [Rational(2860569, 2), 1430284.500000])

(declare-const z Float32)
(assert (= z (_ -zero 8 24)))
;; z should be Float32(-zero)

(declare-const result Float32)
(assert (= result (fp.fma RTP x y z)))
(assert (= result ((_ to_fp 8 24) #xB43CECF5)))
(check-sat)
(exit)
