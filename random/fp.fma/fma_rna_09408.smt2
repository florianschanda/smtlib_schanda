(set-info :smt-lib-version 2.6)
(set-logic QF_FP)
(set-info :source |Random FP created by PyMPF|)
(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b0 #b01010100 #b10010110100100011000100)))
;; x should be Float32(0x2A4B48C4 [Rational(3330609, 18446744073709551616), 0.000000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x4A123D32)))
;; y should be Float32(0x4A123D32 [Rational(4791961, 2), 2395980.500000])

(declare-const z Float32)
(assert (= z ((_ to_fp 8 24) #x7F800000)))
;; z should be Float32(+oo)

(declare-const result Float32)
(assert (= result (fp.fma RNA x y z)))
(assert (not (= result (fp #b0 #b11111111 #b00000000000000000000000))))
(check-sat)
(exit)
