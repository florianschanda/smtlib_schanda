(set-info :license |https://www.gnu.org/licenses/gpl-3.0.html|)
(set-info :category random)
(set-info :status unsat)
(declare-const x Float32)
(assert (= x (fp #b1 #b10010101 #b10101011101011110001111)))
;; x should be Float32(0xCAD5D78F [Rational(-14014351, 2), -7007175.500000])

(declare-const y Float32)
(assert (= y ((_ to_fp 8 24) #x7F800000)))
;; y should be Float32(+oo)

(declare-const z Float32)
(assert (= z (fp #b0 #b11011011 #b01011001010101101100001)))
;; z should be Float32(0x6DACAB61 [Rational(6679825759246786470640353280), 6679825759246786470640353280.000000])

(declare-const result Float32)
(assert (= result (fp.fma RTZ x y z)))
(assert (not (= result (_ -oo 8 24))))
(check-sat)
(exit)
